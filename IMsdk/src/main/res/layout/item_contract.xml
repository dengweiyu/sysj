<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/main_view"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/muc_left_layout"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/information_select">


            <RelativeLayout
                android:id="@+id/muc_left_face_layout"
                android:layout_width="44dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp">

                <com.ifeimo.im.framwork.view.RoundedImageView
                    android:id="@+id/muc_left_face"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_centerVertical="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/logo_round"
                    app:corner_radius="90dp"
                    android:clickable="false"
                    app:oval="false" />

            </RelativeLayout>


            <LinearLayout
                android:id="@+id/muc_left_username_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="13dp"
                android:layout_toRightOf="@+id/muc_left_face_layout"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/muc_left_username"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="12dp"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:text="test2"
                    android:textColor="#333333"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/id_time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="10dp"
                    android:text="12:00123123123123"
                    android:textColor="#999999"
                    android:textSize="13dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/muc_left_username_layout"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="13dp"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@+id/muc_left_face_layout"
                android:clickable="true"
                android:orientation="horizontal">

                <!--<ImageView-->
                <!--android:id="@+id/id_reSendIV"-->
                <!--android:layout_width="16dp"-->
                <!--android:layout_height="16dp"-->
                <!--android:layout_centerVertical="true"-->
                <!--android:layout_marginRight="5dp"-->
                <!--android:layout_toLeftOf="@+id/id_content_layout"-->
                <!--android:src="@drawable/a3g" />-->

                <TextView
                    android:id="@+id/id_reSendIV"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/id_content_layout"
                    android:background="@drawable/shape_item_cache"
                    android:gravity="center"
                    android:text="!"
                    android:textColor="#fff"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/muc_left_msg"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="13dp"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:text="哈哈哈"
                    android:textColor="#999999"
                    android:textSize="12dp" />


                <TextView
                    android:id="@+id/id_unreandcount_tv"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/shape_item_cache"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="1"
                    android:textColor="#fff"
                    android:textSize="10dp" />

            </LinearLayout>


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#e5e5e5" />
    </LinearLayout>


    <FrameLayout
        android:id="@+id/delet_view"
        android:layout_width="50dp"
        android:layout_height="58dp"
        android:background="#ef1633">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="删除"
            android:textColor="@color/color_ffffff" />


    </FrameLayout>

</LinearLayout>