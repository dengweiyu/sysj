<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="5dp"
    android:background="#ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/id_top_layout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/id_back"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:background="?android:attr/selectableItemBackground"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:padding="13dp"
            android:scaleType="fitXY"
            android:src="@drawable/ab_goback_gray"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/conversation_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="42dp"
                android:layout_marginRight="42dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="聊天"
                android:textColor="#dd333333"
                android:textSize="16sp"
                android:visibility="visible" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/id_qq_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="QQ: 45456464"
                android:textColor="#666666"
                android:visibility="gone"
                android:textSize="11sp" />


        </LinearLayout>

        <TextView
            android:id="@+id/id_top_right_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:gravity="center"
            android:text=""
            android:textColor="#000"
            android:textSize="16dp" />

        <FrameLayout
            android:id="@+id/id_top_right_layout"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_alignParentRight="true"
            android:background="?android:attr/selectableItemBackground"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/id_top_right_iv"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:textColor="#000" />
        </FrameLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_aaaaaa" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/id_qq_tip_tv"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#ffffff"
        android:gravity="center"
        android:text="如陪练不回复，可QQ联系,对方QQ："
        android:textColor="#666666"
        android:textSize="12sp" />
</LinearLayout>