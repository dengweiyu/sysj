<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/muc_left_layout"
        android:layout_width="match_parent"
        android:layout_height="58dp">


        <RelativeLayout
            android:id="@+id/muc_left_face_layout"
            android:layout_width="44dp"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"
            android:layout_height="50dp">

            <com.ifeimo.im.view.RoundedImageView
                android:id="@+id/muc_left_face"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:scaleType="centerCrop"
                android:layout_centerVertical="true"
                android:src="@drawable/logo_round"
                app:corner_radius="90dp"
                app:oval="false" />

            <TextView
                android:id="@+id/id_unreandcount_tv"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:background="@drawable/shape_item_cache"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:singleLine="true"
                android:text="1"
                android:textColor="#fff"
                android:textSize="10dp" />

        </RelativeLayout>



        <LinearLayout
            android:id="@+id/muc_left_username_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="13dp"
            android:layout_toRightOf="@+id/muc_left_face_layout"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/muc_left_username"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_weight="1"
                android:maxLines="1"
                android:layout_marginLeft="3dp"
                android:text="test2"
                android:textColor="#333333"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/id_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp"
                android:text="12:00123123123123"
                android:textColor="#999999"
                android:textSize="13dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/muc_left_username_layout"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="2dp"
            android:orientation="horizontal"
            android:layout_toRightOf="@+id/muc_left_face_layout"
            android:clickable="true">

            <!--<ImageView-->
                <!--android:id="@+id/id_reSendIV"-->
                <!--android:layout_width="16dp"-->
                <!--android:layout_height="16dp"-->
                <!--android:layout_centerVertical="true"-->
                <!--android:layout_marginRight="5dp"-->
                <!--android:layout_toLeftOf="@+id/id_content_layout"-->
                <!--android:src="@drawable/a3g" />-->

            <TextView
                android:id="@+id/id_reSendIV"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/id_content_layout"
                android:background="@drawable/shape_item_cache"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:text="!"
                android:textStyle="bold"
                android:textColor="#fff"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/muc_left_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp"
                android:layout_gravity="center_vertical"
                android:maxLines="1"
                android:text="哈哈哈"
                android:textColor="#999999"
                android:textSize="12dp" />
        </LinearLayout>


    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e5e5e5"/>
</LinearLayout>