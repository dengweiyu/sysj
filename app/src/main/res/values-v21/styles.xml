<resources>

    <style name="TransitionTheme" parent="android:Theme.Material">
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="AppTheme" parent="@android:style/Theme.Holo">
        <item name="android:actionBarSize">@dimen/ab_height</item>
        <item name="android:actionBarStyle">@style/AppActionBar</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.Light" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarSize">@dimen/ab_height</item>
        <item name="android:actionBarStyle">@style/AppActionBar</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.Launcher" parent="@android:style/Theme.NoTitleBar.Fullscreen">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@drawable/appstart_lanch_white</item>
    </style>

    <style name="AppTheme.Fullscreen" parent="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen"/>

    <style name="AppActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="MyTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="toolbarStyle">@style/NoMarginToolbar</item>
    </style>

    <style name="NoMarginToolbar" parent="Widget.AppCompat.Toolbar">
        <!-- 设置该属性解决空白部分-->
        <item name="contentInsetStart">0dp</item>
        <item name="android:actionBarSize">@dimen/ab_height</item>
        <item name="actionMenuTextColor">@color/text_color</item>

    </style>

    <style name="MyTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="MyTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="appcompat_edittext" parent="TextAppearance.AppCompat">
        <!-- 默认状态提示颜色和字体-->
        <item name="android:textColorHint">#b9b9b9</item>
        <item name="android:textSize">14sp</item>

        <!-- 下面可以根据需要设置，如果没有将默认使用默认theme的颜色 -->
        <!-- Label标签的颜色 -->
        <item name="colorAccent">#FF4081</item>
        <!-- 默认状态状态设置底线颜色 -->
        <item name="colorControlNormal">#3F51b5</item>
        <!-- 选择的底线颜色 -->
        <item name="colorControlActivated">#FF4081</item>
    </style>

    <style name="appcompat_edittext_msg" parent="@android:style/TextAppearance">
        <item name="android:textColor">#ff3d2e</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="MyDialog" parent="MyTheme.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.7</item>
    </style>

    <style name="BaseListViewMain">
        <item name="android:background">@color/activity_main_bg</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:dividerHeight">7dp</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:fastScrollEnabled">false</item>
        <item name="android:smoothScrollbar">true</item>
        <item name="android:footerDividersEnabled">false</item>
        <item name="android:headerDividersEnabled">false</item>
        <item name="android:scrollbarAlwaysDrawVerticalTrack">false</item>
        <item name="android:scrollbars">none</item>
    </style>

    <style name="BaseListViewWhite">
        <item name="android:background">#ffffff</item>
        <item name="android:cacheColorHint">#00ffffff</item>
        <item name="android:divider">#f7f7f7</item>
        <item name="android:dividerHeight">1px</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:fastScrollEnabled">false</item>
        <item name="android:smoothScrollbar">true</item>
        <item name="android:footerDividersEnabled">false</item>
        <item name="android:headerDividersEnabled">false</item>
        <item name="android:scrollbarAlwaysDrawVerticalTrack">false</item>
        <item name="android:scrollbars">none</item>
    </style>


    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/dialog_bg</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!--############################################################-->

    <style name="FloatViewImageStyle">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">10dp</item>
    </style>
    <!-- 计时浮窗文字样式 -->
    <style name="FloatViewTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">10sp</item>
        <item name="android:layout_marginTop">-3dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <!-- 首页按钮文字样式 -->
    <style name="MainTextStyle">
        <item name="android:textSize">10sp</item>
        <item name="android:layout_marginTop">5sp</item>
    </style>
    <!-- 帮助与教程文字样式 -->
    <style name="ScreenCourseTextStyle">
        <item name="android:gravity">left</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:textSize">12sp</item>
    </style>
    <!-- 帮助与教程图片样式 -->
    <style name="ScreenCoursePicStyle">
        <item name="android:visibility">visible</item>
    </style>
    <!-- 设置页面linearlayout样式 -->
    <style name="SettingLinearlayoutStyle">
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:layout_marginLeft">15dp</item>
    </style>

    <!-- 云顿视频文字样式 -->
    <style name="serverVideoItemTextStyle">
        <item name="android:textSize">10sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>
