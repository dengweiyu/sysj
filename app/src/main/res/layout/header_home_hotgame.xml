<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#ffffff"
              android:descendantFocusability="afterDescendants"
              android:orientation="vertical">

    <!-- 112 -->

    <LinearLayout
        android:id="@+id/hotgame_button"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:background="@drawable/button_main"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="9dp"
        android:paddingRight="9dp">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="12dp"
            android:scaleType="fitCenter"
            android:src="@drawable/home_hot"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:text="@string/home_hotgame"
            android:textColor="#e0333333"
            android:textSize="12sp"/>

        <ImageView
            android:layout_width="7dp"
            android:layout_height="11dp"
            android:scaleType="fitCenter"
            android:src="@drawable/go_home"/>
    </LinearLayout>

    <com.li.videoapplication.views.ElasticHorizontalListView
        android:id="@+id/horizontallistvierw"
        style="@style/BaseListViewMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="7dp"
        android:background="#00ffffff"
        android:dividerHeight="12dp"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"/>

