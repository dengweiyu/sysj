<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="110dp"
    android:layout_height="180dp"
    android:background="@color/white"
    android:orientation="vertical">
<RelativeLayout
    android:layout_width="110dp"
    android:layout_height="150dp"
    android:id="@+id/rl_vip_center_item_root">
    <ImageView
        android:id="@+id/iv_vip_center_select"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_margin="5dp"
        android:visibility="gone"
        android:src="@drawable/select"/>

    <LinearLayout
        android:id="@+id/ll_vip_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/iv_vip_center_level_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitXY"
            android:src="@drawable/vip_level_3"/>
        <ImageView
            android:id="@+id/iv_vip_center_vip_icon"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/vip_3"/>
    </LinearLayout>

    <ListView
        android:id="@+id/lv_vip_privileges"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:divider="@color/transparent_background"
        android:dividerHeight="2dip"
        android:layout_below="@+id/ll_vip_img"
        android:stackFromBottom="true"
        android:layout_marginBottom="2dp"
        android:layout_alignParentBottom="true"></ListView>
    </RelativeLayout>

    <TextView
        android:id="@+id/iv_vip_center_money"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="14sp"
        android:gravity="bottom|left"
        android:text="10元/月"/>
</LinearLayout>