<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="110dp"
    android:layout_height="164dp"
    android:background="@color/white"
    android:orientation="vertical">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl_vip_center_item_root">

    <LinearLayout
        android:id="@+id/ll_vip_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:weightSum="1">
        <ImageView
            android:id="@+id/iv_vip_center_level_icon"
            android:layout_width="78dp"
            android:layout_height="82dp"
            android:scaleType="fitXY"
            android:src="@drawable/vip_level_3"
            android:layout_weight="0.4"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_vip_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_marginRight="6dp"
                    android:text="VIP"/>
                <TextView
                    android:id="@+id/tv_vip_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:textSize="14sp"
                    android:text="1"/>
            </LinearLayout>

        <TextView
            android:id="@+id/tv_vip_level_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="5元/月"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_vip_center_select"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_margin="5dp"
        android:visibility="gone"
        android:src="@drawable/select"/>

    <ListView
        android:id="@+id/lv_vip_privileges"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:divider="@color/transparent_background"
        android:dividerHeight="2dip"
        android:layout_below="@+id/ll_vip_img"
        android:stackFromBottom="true"
        android:layout_marginBottom="2dp"
        android:visibility="gone"
        android:layout_alignParentBottom="true"></ListView>
    </RelativeLayout>

</LinearLayout>