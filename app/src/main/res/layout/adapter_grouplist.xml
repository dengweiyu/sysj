<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/button_main"
    android:gravity="center_vertical"
    android:descendantFocusability="blocksDescendants">

    <LinearLayout
        android:id="@+id/grouplist_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/game_medal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp">

            <ImageView
                android:id="@+id/grouplist_medal_iv"
                android:layout_width="30dp"
                android:layout_height="30dp"></ImageView>

            <TextView
                android:id="@+id/grouplist_medal_tv"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text=" " />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:background="@drawable/button_main"
            android:descendantFocusability="blocksDescendants">
    <com.li.videoapplication.views.RoundedImageView
        android:id="@+id/grouplist_pic"
        android:layout_width="39dp"
        android:layout_height="39dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="14dp"
        android:src="#c2c2c2"
        app:riv_border_color="#ffffff"
        app:riv_border_width="0dp"
        app:riv_corner_radius="8dp"
        app:riv_oval="false" />

    <TextView
        android:id="@+id/grouplist_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/grouplist_pic"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/grouplist_pic"
        android:ellipsize="end"
        android:singleLine="true"
        android:text=""
        android:textColor="#242424"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/grouplist_focus"
        android:layout_width="42dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="12dp"
        android:background="@drawable/player_focus"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="@string/dynamic_focus"
        android:textColor="@color/groupdetail_player_red"
        android:textSize="11sp"
        android:visibility="visible"/>

    <!-- #ff372d -->

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/grouplist_pic"
        android:layout_alignLeft="@+id/grouplist_title"
        android:layout_marginBottom="2dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/grouplist_left"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="话题  202"
            android:textColor="#646464"
            android:textSize="10sp"/>

        <TextView
            android:id="@+id/grouplist_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="关注 201"
            android:textColor="#646464"
            android:textSize="10sp"/>
    </LinearLayout>

            <LinearLayout
                android:id="@+id/content_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/grouplist_pic"
                android:layout_alignLeft="@+id/grouplist_title"
                android:layout_marginBottom="2dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/large_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="60dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/menu_game_gray"
                    android:textSize="9sp" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/grouplist_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/grouplist_one"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="14dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/large_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</RelativeLayout>