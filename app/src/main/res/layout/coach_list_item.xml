<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_press"
    android:orientation="vertical"
    android:clickable="true">
    <RelativeLayout
        android:id="@+id/rl_coach_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
    <ImageView
        android:id="@+id/iv_coach_icon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"/>
        <LinearLayout
            android:id="@+id/ll_coach_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:background="#c803f94a">
            <ImageView
                android:id="@+id/iv_coach_status_icon"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/coach_online"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/tv_coach_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:textSize="10sp"
                android:text="在线"
                android:textColor="@color/white"/>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp">
        <TextView
            android:id="@+id/tv_coach_nick_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="14sp"
            android:textColor="@color/text_color"
            android:text=""/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_coach_rank_icon"
            android:layout_width="15dp"
            android:layout_height="15dp"/>
        <TextView
            android:id="@+id/tv_coach_order_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="12sp"
            android:layout_marginLeft="4dp"
            android:textColor="@color/textcolor_french_gray"
            android:layout_weight="1"
            android:gravity="left"
            android:text="永恒钻石"/>

        <TextView
            android:id="@+id/tv_coach_order_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="12sp"
            android:layout_marginLeft="4dp"
            android:layout_gravity="right"
            android:textColor="@color/textcolor_french_gray"
            android:layout_weight="1"
            android:gravity="right"
            android:text="订单数：100"/>


    </LinearLayout>
</LinearLayout>
