<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_press"
    android:clickable="true"
    android:padding="10dp">

    <com.li.videoapplication.views.CircleImageView
        android:id="@+id/civ_coach_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/civ_coach_icon"
        android:layout_alignTop="@+id/civ_coach_icon"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/tv_coach_nick_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="霸道总裁"
        android:textColor="@color/title_bg_color"
        android:textSize="15sp"
        android:maxLines="1"
        android:ellipsize="end"
     />
    <TextView
        android:id="@+id/tv_coach_score"
        android:layout_alignTop="@+id/tv_coach_nick_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="12sp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/textcolor_french_gray"
        android:text="4.0分"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/civ_coach_icon"
        android:layout_alignBottom="@+id/civ_coach_icon">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
        <ImageView
            android:id="@+id/iv_coach_rank_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/tv_coach_order_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginLeft="2dp"
            android:layout_gravity="center"
            android:textColor="@color/textcolor_french_gray"
            android:hint="最强王者最强"/>
        </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/iv_coach_order_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"

            android:src="@drawable/order"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/tv_coach_order_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:textSize="12sp"
            android:maxLines="1"
            android:textColor="@color/textcolor_french_gray"
            android:ellipsize="end"
            android:layout_gravity="center"
            android:hint="订单数100"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/iv_coach_game_win"
            android:layout_width="20dp"
            android:layout_height="20dp"

            android:src="@drawable/win_rate"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/tv_coach_game_win_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginLeft="2dp"
            android:layout_gravity="center"
            android:textColor="@color/textcolor_french_gray"
            android:hint="胜率100%"/>
    </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_coach_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textColor="@color/green"
        android:textSize="12sp"
        android:text="在线"
        android:layout_marginLeft="10dp"/>
</RelativeLayout>
