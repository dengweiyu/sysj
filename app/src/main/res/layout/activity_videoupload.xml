<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="#f5f5f5"
    tools:ignore="RtlSymmetry,ScrollViewSize,HardcodedText,RtlHardcoded,DisableBaselineAlignment,NestedWeights">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#f5f5f5"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <!-- 视频封面 -->
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="138dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/videoupload_cover"
                    android:layout_width="182dp"
                    android:layout_height="104dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="80dp"
                    android:layout_marginRight="80dp"
                    android:layout_marginTop="11dp"
                    android:scaleType="fitXY"
                    android:src="#666666" />

                <TextView
                    android:id="@+id/videoupload_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/videoupload_cover"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="6dp"
                    android:text="28.2MB"
                    android:textColor="#989898"
                    android:textSize="9sp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/videoupload_edit"
                    android:layout_width="182dp"
                    android:layout_height="20dp"
                    android:layout_alignBottom="@+id/videoupload_cover"
                    android:layout_alignLeft="@+id/videoupload_cover"
                    android:layout_alignRight="@+id/videoupload_cover"
                    android:background="#88000000"
                    android:gravity="center"
                    android:text="@string/videoshare_edit"
                    android:textColor="#ffffff"
                    android:textSize="12sp" />

            </RelativeLayout>

            <View
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#d4d4d4"/>

            <!-- 标题，类型，描述 -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="填写信息"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="14dp"
                android:textSize="13sp"
                android:textColor="#838383"/>

            <EditText
                android:id="@+id/videoupload_title"
                android:layout_width="fill_parent"
                android:layout_height="80dp"
                android:background="@color/white"
                android:hint="请输入视频标题"
                android:gravity="left|top"
                android:maxLines="5"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:paddingBottom="12dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="12dp"
                android:textColor="#dd333333"
                android:textColorHint="#ababab"
                android:textSize="13sp"/>
            <View
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#dcdcdc"/>
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/videoupload_upload"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_margin="20dp"
        android:background="@drawable/button_blue"
        android:gravity="center"
        android:text="上传并参与活动"
        android:textColor="#ffffff"
        android:textSize="14sp" />

</LinearLayout>