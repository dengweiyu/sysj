<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:background="#ffffff">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="#e2e2e2"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/top_left"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <!-- 68 -->
            <ImageView
                android:id="@+id/top_left_line"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:scaleType="fitXY"
                android:src="@color/menu_billboard_blue"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/top_left_icon"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/playerbillboard_fans"/>

                <TextView
                    android:id="@+id/top_left_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="@string/playerBillboard_left"
                    android:textColor="@color/menu_billboard_blue"
                    android:textSize="11sp"/>
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#e2e2e2"
            android:visibility="gone"/>

        <RelativeLayout
            android:id="@+id/top_middle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/top_middle_line"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:scaleType="fitXY"
                android:src="@color/menu_billboard_yellow"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/top_middle_icon"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/playerbillboard_grade_gray"/>

                <TextView
                    android:id="@+id/top_middle_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="@string/playerBillboard_middle"
                    android:textColor="@color/menu_billboard_gray"
                    android:textSize="11sp"/>
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#e2e2e2"
            android:visibility="gone"/>

        <RelativeLayout
            android:id="@+id/top_right"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/top_right_line"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:scaleType="fitXY"
                android:src="@color/menu_billboard_purple"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/top_right_icon"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/playerbillboard_vedio_gray"/>

                <TextView
                    android:id="@+id/top_right_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="@string/playerBillboard_right"
                    android:textColor="@color/menu_billboard_gray"
                    android:textSize="11sp"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>