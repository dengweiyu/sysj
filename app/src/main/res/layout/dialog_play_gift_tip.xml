<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
               android:layout_width="match_parent"
               android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@color/tip_bg"
            android:layout_above="@+id/ll_bottom"
            />
        <LinearLayout
            android:id="@+id/ll_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@color/tip_bg"
                android:layout_weight="1"
                />
            <com.li.videoapplication.views.TipView
                android:id="@+id/tv_dialog_play_gift"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/play_gift"
                android:layout_gravity="right"
                app:isRound="true"
                android:elevation="2dp"/>
            <ImageView
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:src="@color/tip_bg"/>
        </LinearLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="56dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="6dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/tip_known"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="-28dp"
            android:scaleX="0.9"
            android:scaleY="0.9"
            android:scaleType="fitXY"
            android:src="@drawable/home_tip_close"/>
        <ImageView
            android:id="@+id/iv_video_play_gift_tip"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:src="@drawable/play_gift_tip"/>

    </LinearLayout>
    </RelativeLayout>

</FrameLayout>