<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <Button
        android:id="@+id/popwindow_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_title_height"
        android:layout_alignParentBottom="true"
        android:background="@drawable/custom_radius_selector"
        android:text="@string/button_cal"
        android:textColor="@android:color/white" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/popwindow_button"
        android:alpha="0.8"
        android:background="@drawable/custom_top_raduis_bg" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ProgressBar
                android:id="@+id/dialog_full_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminateBehavior="repeat"
                android:indeterminateDrawable="@drawable/progress_dialog_bg"
                android:indeterminateOnly="true" />

            <ImageView
                android:id="@+id/dialog_full_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/alert_right"
                android:visibility="gone" />

            <TextView
                android:id="@+id/dialog_full_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/search_device_happly_tv"
                android:textColor="@android:color/white"
                android:textSize="@dimen/activity_title_size_16sp" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>