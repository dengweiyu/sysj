<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent_background"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="请正确选择游戏类型，否则分享审核不通过"
                android:textSize="12sp"
                android:textColor="#f9f9f9"
                android:background="@drawable/moretype_text_bg"
                />
            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#e2e2e2" />

            <LinearLayout
                android:id="@+id/moretype_game"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:background="@drawable/background_press"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="32dp"
                    android:layout_weight="10"
                    android:text="@string/moretype_game"
                    android:textColor="#dd333333"
                    android:textSize="12sp" />

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/back_moretype" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#e2e2e2" />

            <LinearLayout
                android:id="@+id/moretype_life"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:background="@drawable/background_press"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="32dp"
                    android:layout_weight="10"
                    android:text="@string/moretype_life"
                    android:textColor="#dd333333"
                    android:textSize="12sp" />

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/back_moretype" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#e2e2e2"
                android:visibility="gone" />
        </LinearLayout>

</FrameLayout>