<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="76dp"
                android:background="@drawable/button_white"
                android:clickable="true">

    <!-- 73 -->


    <!-- 94/54 -->

    <RelativeLayout
        android:id="@+id/left"
        android:layout_width="94dp"
        android:layout_height="54dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp">

        <ImageView
            android:id="@+id/videoplay_vedio_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"
            android:src="#555555"/>

        <RelativeLayout
            android:id="@+id/bottom"
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:layout_alignParentBottom="true"
            android:background="#88000000">

            <TextView
                android:id="@+id/videoplay_vedio_allTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="6dp"
                android:text="17:00"
                android:textColor="#ffffff"
                android:textSize="8dp"/>
        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/videoplay_vedio_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/left"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="22dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/left"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="秦时明月秦时明月秦时明月秦时明月秦时明月秦时明月"
        android:textColor="#545454"
        android:textSize="12sp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/left"
        android:layout_marginBottom="-6dp"
        android:layout_alignLeft="@+id/videoplay_vedio_title"
        android:layout_alignRight="@+id/videoplay_vedio_title">

        <ImageView
            android:id="@+id/left1"
            android:layout_width="11dp"
            android:layout_height="11dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/play_home"/>

        <TextView
            android:id="@+id/videoplay_vedio_playCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@+id/left1"
            android:singleLine="true"
            android:text="1,545"
            android:textColor="#898989"
            android:textSize="9sp"/>

        <ImageView
            android:id="@+id/videoplay_vedio_good"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:padding="7dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="6dp"
            android:layout_toLeftOf="@+id/videoplay_vedio_likeCount"
            android:src="@drawable/videoplay_good_gray_205"/>

        <TextView
            android:id="@+id/videoplay_vedio_likeCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="11dp"
            android:layout_toLeftOf="@+id/videoplay_vedio_comment"
            android:text="20"
            android:textColor="#8c8c8c"
            android:textSize="10sp"/>

        <ImageView
            android:id="@+id/videoplay_vedio_comment"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:padding="7dp"
            android:layout_centerInParent="true"
            android:layout_marginRight="6dp"
            android:layout_toLeftOf="@+id/videoplay_vedio_commentCount"
            android:src="@drawable/videoplay_comment_gray_205"/>

        <TextView
            android:id="@+id/videoplay_vedio_commentCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="20"
            android:textColor="#8c8c8c"
            android:textSize="10sp"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15dp"
        android:background="#e2e2e2"/>

</RelativeLayout>