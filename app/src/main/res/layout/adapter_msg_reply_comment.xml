<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/button_main">

    <com.li.videoapplication.views.CircleImageView
        android:id="@+id/civ_avatar"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginTop="14dp"
        android:layout_marginStart="19dp"/>

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/civ_avatar"
        android:layout_toEndOf="@id/civ_avatar"
        android:layout_marginTop="4dp"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="20dp"
        android:text="啦啦啦啦啦啦浪费弗拉可使肌肤垃圾死了发动机暗恋都会计分录"
        android:textSize="12sp"
        android:textColor="#8b8b8b"/>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/tv_content"
        android:layout_below="@id/tv_content"
        android:layout_marginTop="8dp"
        android:text="16:23"
        android:textSize="9sp"
        android:textColor="#8b8b8b"/>

    <ImageView
        android:id="@+id/iv_comment"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/tv_time"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="14dp"
        android:src="@drawable/videoplay_comment_gray_205"
        />
</RelativeLayout>
