<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="230dp"
    android:layout_height="wrap_content"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:id="@+id/ll_gift_time_line_root"
    android:background="@drawable/gift_time_line_bg">
    <com.li.videoapplication.views.CircleImageView
        android:id="@+id/rv_play_gift_icon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:scaleType="centerCrop"
        android:layout_marginLeft="8dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="8dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_player_name"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:maxWidth="50dp"
            android:textSize="12sp"
            android:maxLines="1"
            android:maxEms="6"
            android:ellipsize="end"
            android:textColor="@color/white"
            android:text="霸道总裁"/>
        <TextView
            android:id="@+id/tv_play_gift_name"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="12sp"
            android:maxLines="1"
            android:maxEms="6"
            android:ellipsize="end"
            android:textColor="#fffa00"
            android:text="送视界熊"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/iv_play_gift_icon"
        android:layout_width="36dp"
        android:layout_height="36dp"/>
    <TextView
        android:id="@+id/tv_play_gift_num"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="right"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:textSize="14sp"
        android:textStyle="bold"/>
</LinearLayout>