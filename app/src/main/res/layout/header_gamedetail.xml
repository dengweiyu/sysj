<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/gamedetail_touch"
        android:layout_width="match_parent"
        android:layout_height="@dimen/gameheader_bgheight">

        <!-- 148dp -->

        <ImageView
            android:id="@+id/groupdetail_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="#283c6c"
            android:fitsSystemWindows="true"
            android:scaleType="fitXY" />

        <!-- 56 -->
        <com.li.videoapplication.views.RoundedImageView
            android:id="@+id/groupdetail_head"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="@dimen/gameheader_margintop"
            android:src="#666666"
            app:riv_border_color="#ffffff"
            app:riv_border_width="0dp"
            app:riv_corner_radius="8dp"
            app:riv_oval="false" />

        <TextView
            android:id="@+id/groupdetail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/groupdetail_head"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="0dp"
            android:layout_toRightOf="@+id/groupdetail_head"
            android:text=""
            android:hint="@string/loading_text"
            android:textColor="#ffffff"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/groupdetail_mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/groupdetail_name"
            android:layout_below="@+id/groupdetail_name"
            android:layout_marginTop="5dp"
            android:text="视频 0 玩家 0"
            android:textColor="#aaffffff"
            android:textSize="10sp" />

        <LinearLayout
            android:id="@+id/groupdetail_focusview"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:background="@drawable/gamematch_cs_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:layout_alignLeft="@+id/groupdetail_mark"
            android:layout_below="@+id/groupdetail_mark"
            android:layout_marginTop="8dp">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginRight="4dp"
                android:src="@drawable/dynamic_focus_left" />

            <TextView
                android:id="@+id/groupdetail_focus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dynamic_focus"
                android:textColor="@color/white"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/groupdetail_matchview"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:background="@drawable/groupdetail_match_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:layout_toRightOf="@+id/groupdetail_focusview"
            android:layout_below="@+id/groupdetail_mark"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="10dp"
            android:visibility="gone">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginRight="4dp"
                android:src="@drawable/groupdetail_match" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="赛事"
                android:textColor="@color/white"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/groupdetail_chatview"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:background="@drawable/gamematch_chat_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:layout_toRightOf="@+id/groupdetail_matchview"
            android:layout_below="@+id/groupdetail_mark"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="10dp"
            android:visibility="visible">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginRight="4dp"
                android:src="@drawable/gamematch_chat" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="群聊"
                android:textColor="@color/white"
                android:textSize="10sp" />
        </LinearLayout>
    </RelativeLayout>

</FrameLayout>