<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/gamedetail_touch"
        android:layout_width="match_parent"
        android:layout_height="@dimen/gameheader_bgheight">

        <!-- 148dp -->

        <ImageView
            android:id="@+id/groupdetail_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="#283c6c"
            android:fitsSystemWindows="true"
            android:scaleType="fitXY" />

        <!-- 56 -->

        <com.li.videoapplication.views.RoundedImageView
            android:transitionName="shareGameIcon"
            android:id="@+id/groupdetail_head"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="@dimen/gameheader_margintop"
            android:src="#666666"
            app:riv_border_color="#ffffff"
            app:riv_border_width="0dp"
            app:riv_corner_radius="8dp"
            app:riv_oval="false" />

        <TextView
            android:id="@+id/groupdetail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/groupdetail_head"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="0dp"
            android:layout_toRightOf="@+id/groupdetail_head"
            android:text=""
            android:hint="@string/loading_text"
            android:textColor="#ffffff"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/groupdetail_mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/groupdetail_name"
            android:layout_below="@+id/groupdetail_name"
            android:layout_marginTop="5dp"
            android:text="视频 0 玩家 0"
            android:textColor="#aaffffff"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/groupdetail_focus"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_alignLeft="@+id/groupdetail_mark"
            android:layout_below="@+id/groupdetail_mark"
            android:layout_marginTop="8dp"
            android:background="@drawable/focus_btn"
            android:button="@null"
            android:gravity="center"
            android:text="@string/dynamic_focus"
            android:textColor="#aaffffff"
            android:textSize="10sp" />

    </RelativeLayout>

</FrameLayout>