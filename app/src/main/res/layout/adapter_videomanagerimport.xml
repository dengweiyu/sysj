<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/kaka_16"
        android:paddingRight="@dimen/kaka_16"
        android:paddingTop="@dimen/kaka_4"
        android:paddingBottom="@dimen/kaka_4">

        <ImageView
            android:id="@+id/videomanagerimport_pic"
            android:layout_width="@dimen/kaka_56"
            android:layout_height="@dimen/kaka_56"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/videomanagerimport_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/kaka_8"
            android:layout_marginRight="@dimen/kaka_12"
            android:textColor="#787878"
            android:textSize="12sp"
            android:text=""
            android:hint="@string/loading_text"/>

        <!--16-->

        <com.li.videoapplication.views.SmoothCheckBox
            android:visibility="visible"
            android:id="@+id/videomanagerimport_check"
            android:layout_width="@dimen/kaka_24"
            android:layout_height="@dimen/kaka_24"
            android:checked="false"
            app:color_checked="#77CAFE"
            app:color_unchecked="#afafaf"
            app:color_unchecked_stroke="#ffffff" />

        <TextView
            android:id="@+id/videomanagerimport_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/videomanagerimport_end"
            android:textColor="#787878"
            android:textSize="14sp"
            android:visibility="gone"/>

    </LinearLayout>

</FrameLayout>