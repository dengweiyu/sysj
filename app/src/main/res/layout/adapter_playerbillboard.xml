<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="58dp"
                android:background="@drawable/button_white">

    <FrameLayout
        android:id="@+id/left"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="0dp">

        <ImageView
            android:visibility="visible"
            android:id="@+id/playerbillboard_ranking"
            android:layout_width="22dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:scaleX="0.7"
            android:scaleY="0.7"
            android:padding="2dp"
            android:src="@drawable/playerbillboard_one"/>

        <TextView
            android:visibility="gone"
            android:id="@+id/playerbillboard_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:singleLine="true"
            android:maxLength="5"
            android:text="44444"
            android:textColor="#898989"
            android:textSize="10sp"/>

    </FrameLayout>

    <RelativeLayout
        android:id="@+id/playerbillboard_head_layout"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_toRightOf="@+id/left"
        android:layout_centerVertical="true"
        android:layout_marginLeft="0dp">

        <com.li.videoapplication.views.CircleImageView
            android:id="@+id/playerbillboard_head"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:scaleType="centerCrop"
            android:src="#555555"/>

        <ImageView
            android:id="@+id/playerbillboard_v"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/home_v_red"
            android:visibility="invisible"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/playerbillboard_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/playerbillboard_head_layout"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@+id/playerbillboard_head_layout"
        android:ellipsize="end"
        android:maxEms="10"
        android:singleLine="true"
        android:text=""
        android:hint="@string/loading_text"
        android:textColor="#454545"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/playerbillboard_mark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/playerbillboard_head_layout"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="14dp"
        android:layout_toRightOf="@+id/playerbillboard_head_layout"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="等级 19 视频 236 粉丝 56"
        android:textColor="#8b8b8b"
        android:textSize="11sp"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/playerbillboard_focus"
        android:layout_width="48dp"
        android:layout_height="22dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="12dp"
        android:background="@drawable/player_focus"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/playerbillboard_focus_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/dynamic_focus"
            android:textColor="@color/groupdetail_player_red"
            android:textSize="11sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/groupdetail_player_focus"
        android:layout_width="48dp"
        android:layout_height="22dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/player_focus"
        android:gravity="center"
        android:text="@string/dynamic_focus"
        android:textColor="@color/groupdetail_player_red"
        android:textSize="10sp"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/playerbillboard_head_layout"
        android:layout_alignLeft="@+id/playerbillboard_name"
        android:layout_marginBottom="3dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_beans"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_gravity="center"
            android:layout_marginRight="4dp"
            android:visibility="gone"
            android:src="@drawable/slider_bean"/>

        <TextView
            android:id="@+id/playerbillboard_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="魔豆 0"
            android:textColor="#646464"
            android:textSize="10sp"
            android:layout_marginRight="12dp"/>

        <TextView
            android:id="@+id/playerbillboard_middle"
            android:layout_width="58dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="视频 0"
            android:textColor="#646464"
            android:textSize="10sp"/>

        <TextView
            android:id="@+id/playerbillboard_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="粉丝 0"
            android:textColor="#646464"
            android:textSize="10sp"/>
    </LinearLayout>

    <View
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider_bg"/>
</RelativeLayout>