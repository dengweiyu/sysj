<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="fill_parent"
                android:layout_height="86dp"
                android:background="@drawable/button_main"
                tools:ignore="DuplicateIds,UnknownIdInLayout,HardcodedText,RtlHardcoded,SmallSp,SpUsage,ContentDescription">

    <!-- 94/54 -->

    <RelativeLayout
        android:id="@+id/left"
        android:layout_width="94dp"
        android:layout_height="58dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp">

        <ImageView
            android:id="@+id/recommend_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"
            android:src="#555555"/>

        <!-- 26 -->

        <ImageView
            android:id="@+id/recommend_centerPlay"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_centerInParent="true"
            android:scaleType="fitCenter"
            android:src="@drawable/play_normal"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/recommend_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/left"
        android:layout_toLeftOf="@+id/tv_recommend"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@+id/left"
        android:ellipsize="end"
        android:lines="1"
        android:text=""
        android:hint="@string/loading_text"
        android:textColor="#646464"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/tv_recommend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="推荐"
        android:textColor="@color/currency_red"
        android:layout_alignTop="@+id/left"
        android:layout_marginRight="10dp"
        android:textSize="9sp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:visibility="invisible"
        android:layout_alignParentRight="true"
        android:background="@drawable/stroke_red"/>

    <LinearLayout
        android:id="@+id/bottom"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/left"
        android:gravity="center_vertical"
        android:layout_alignLeft="@+id/recommend_title">

        <RelativeLayout
            android:layout_width="20dp"
            android:layout_height="20dp">
        <com.li.videoapplication.views.CircleImageView
            android:id="@+id/recommend_head"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="#555555"/>
        <ImageView
            android:id="@+id/iv_recommend_member_v"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/home_v_red"
            android:visibility="invisible"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/recommend_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text=""
            android:hint="@string/loading_text"
            android:textColor="#898989"
            android:textSize="11sp"/>




        <ImageView
            android:id="@+id/iv_recommend_play_count"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginRight="6dp"
            android:src="@drawable/recommend_play_count"
            android:scaleType="fitXY"
            android:button="@null"
            android:checked="false" />

        <TextView
            android:id="@+id/tv_recommend_play_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:lines="1"
            android:text="0"
            android:textColor="#898989"
            android:textSize="12sp" />
    </LinearLayout>

    <View
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15dp"
        android:background="#f2f2f2"/>

</RelativeLayout>