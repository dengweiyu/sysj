<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="48dp"
    android:layout_height="64dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/button_main_tranceparent"
    android:clickable="true"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center">

    <com.li.videoapplication.views.RoundedImageView
        android:id="@+id/mypersonalinfo_pic"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        android:src="#555555"
        app:riv_border_color="#ffffff"
        app:riv_border_width="0dp"
        app:riv_corner_radius="5dp"
        app:riv_oval="false"/>

    <TextView
        android:id="@+id/mypersonalinfo_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mypersonalinfo_pic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="7dp"
        android:singleLine="true"
        android:text=""
        android:hint="@string/p2refresh_doing_end_refresh"
        android:textColor="#525252"
        android:textSize="8sp"/>

    <ImageView
        android:id="@+id/mypersonalinfo_selected"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="22dp"
        android:scaleType="fitXY"
        android:src="@drawable/selected_mypersonalinfo_btn"/>

</RelativeLayout>