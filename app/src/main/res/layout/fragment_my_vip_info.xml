<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_my_vip_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ll_my_vip_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_vip_level_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/vip_level_2"/>
            <TextView
                android:id="@+id/tv_vip_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                android:text="VIP 2"/>

            <TextView
                android:id="@+id/tv_show_vip_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="14sp"
                android:layout_marginTop="16dp"
                android:textColor="@color/lpds_blue"
                android:text="查看详情"/>


            <TextView
                android:id="@+id/tv_overdue_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="14sp"
                android:layout_marginTop="16dp"
                android:textColor="@color/textcolor_french_gray"
                android:text="2017-8-4 到期"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_marginTop="32dp"
                android:background="@color/activity_main_bg"></View>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_no_vip_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:visibility="gone"
            android:layout_centerInParent="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/textcolor_french_gray"
                android:textSize="12sp"
                android:text="您还没有任何特权，"/>
            <TextView
                android:id="@+id/tv_recharge_vip_now"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/ab_backdround_red"
                android:textSize="12sp"
                android:text="立即充值"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/textcolor_french_gray"
                android:textSize="12sp"
                android:text="，享受特权"/>
        </LinearLayout>
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_payment_vip_now"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="64dp"
        android:gravity="center"
        android:layout_below="@+id/rl_my_vip_info"
        android:background="#ffc10e"
        android:text="立即续费"/>


</RelativeLayout>