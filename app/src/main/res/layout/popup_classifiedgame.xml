<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="106dp"
              android:layout_height="66dp"
              android:background="#e2e2e2"
              android:orientation="vertical"
              android:padding="1px">

    <!-- 66/76 -->

    <RelativeLayout
        android:id="@+id/classifiedgame_new"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/button_white">

        <CheckBox
            android:id="@+id/classifiedgame_new_check"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:background="@drawable/classifiedgame_point_btn"
            android:button="@null"
            android:checked="true"
            android:clickable="false"
            android:enabled="false"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_toRightOf="@+id/classifiedgame_new_check"
            android:gravity="left"
            android:text="@string/classifiedgame_new"
            android:textColor="#414141"
            android:textSize="12sp"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e2e2e2"/>

    <RelativeLayout
        android:id="@+id/classifiedgame_hot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/button_white">

        <CheckBox
            android:id="@+id/classifiedgame_hot_check"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:background="@drawable/classifiedgame_point_btn"
            android:button="@null"
            android:clickable="false"
            android:enabled="false"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_toRightOf="@+id/classifiedgame_hot_check"
            android:gravity="left"
            android:text="@string/classifiedgame_hot"
            android:textColor="#414141"
            android:textSize="12sp"/>

    </RelativeLayout>

</LinearLayout>