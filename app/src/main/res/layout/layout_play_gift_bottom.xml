<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:orientation="horizontal">
        <include
            layout="@layout/layout_my_currency"></include>
        <View
            android:layout_width="1px"
            android:layout_height="12dp"
            android:background="#cfcfcf"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="12dp"></View>
        <TextView
            android:id="@+id/tv_video_play_recharge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/currency_red"
            android:background="@drawable/stroke_red_btn"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="充值"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true">
        <LinearLayout
            android:id="@+id/ll_video_play_input"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/ab_gray_round"
            android:layout_marginRight="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">
            <TextView
                android:id="@+id/tv_video_play_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:text="x1"/>
            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/arrow_right_red"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_video_play_gift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:background="@color/currency_red"
            android:textSize="12sp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:paddingRight="12dp"
            android:paddingLeft="12dp"
            android:text="打赏"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e2e2e2"
        android:layout_alignParentTop="true"></View>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/activity_main_bg"
        android:visibility="gone"
        android:layout_alignParentBottom="true"></View>
</RelativeLayout>