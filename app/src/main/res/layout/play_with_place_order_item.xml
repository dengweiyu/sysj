<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
                android:clickable="true"
                android:background="@drawable/background_press"

    android:padding="15dp">
    <com.li.videoapplication.views.CircleImageView
        android:id="@+id/civ_user_icon"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:scaleType="centerCrop"
        android:layout_marginLeft="8dp"/>
    <LinearLayout
        android:id="@+id/ll_nick_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/civ_user_icon"
        android:layout_toLeftOf="@+id/tv_play_with_order_status"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/tv_user_nick_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="14sp"
        android:textColor="@color/text_color"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="霸道总裁sadasdsadasasdsa"/>

    <TextView
        android:id="@+id/tv_user_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textColor="@color/textcolor_french_gray"
        android:textSize="12sp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="5.0分"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_play_with_order_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/textcolor_french_gray"
        android:layout_alignLeft="@+id/ll_nick_name"
        android:layout_alignBottom="@+id/civ_user_icon"
        android:text="模式：排位赛"/>

    <TextView
        android:id="@+id/tv_play_with_order_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/lpds_blue"
        android:layout_alignParentRight="true"
        android:textSize="12sp"
        android:layout_alignBottom="@+id/ll_nick_name"
        android:text="完成陪练"/>

    <TextView
        android:id="@+id/tv_play_with_order_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textcolor_french_gray"
        android:layout_alignParentRight="true"
        android:textSize="12sp"
        android:layout_alignBottom="@+id/civ_user_icon"
        android:text="16:00"/>
</RelativeLayout>