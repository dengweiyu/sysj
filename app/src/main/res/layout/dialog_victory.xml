<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="34dp"
    android:layout_marginRight="34dp"
    android:background="@drawable/button_main_round"
    android:orientation="vertical">

    <ImageView
        android:layout_width="79.2dp"
        android:layout_height="96dp"
        android:layout_gravity="center"
        android:layout_marginTop="18dp"
        android:src="@drawable/dialog_victory_icon"
        android:layout_marginBottom="12dp"/>

    <TextView
        android:id="@+id/dialog_victory_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        android:lineSpacingExtra="5dp"
        android:paddingLeft="18dp"
        android:gravity="center"
        android:paddingRight="18dp"
        android:hint="下轮比赛将于MM月dd日 HH:mm开始，请准时到我的赛程页面联系对手进行比赛。"
        android:textColor="@color/text_color"
        android:textSize="15sp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:background="#e4e4e4" />

    <TextView
        android:id="@+id/dialog_victory_yes"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/dialog_signup_ok"
        android:clickable="true"
        android:gravity="center"
        android:text="@string/button_ok"
        android:textColor="@color/text_color"
        android:textSize="16sp" />

</LinearLayout>
