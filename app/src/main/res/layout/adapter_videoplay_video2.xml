<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="76dp"
    android:background="@drawable/button_white"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_gravity="center_vertical"
            android:id="@+id/left"
            android:layout_width="94dp"
            android:layout_height="54dp"
            android:layout_marginLeft="15dp">

            <ImageView
                android:id="@+id/videoplay_vedio_cover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop"
                android:src="#555555" />

            <LinearLayout
                android:layout_alignParentRight="true"
                android:layout_width="28dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:background="#5e000000">

                <TextView
                    android:id="@+id/videoplay_vedio_videocount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="23"
                    android:textSize="12sp"
                    android:textColor="@color/white"/>


                <ImageView
                    android:layout_marginTop="3dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/videoplay_video"
                    />
            </LinearLayout>
        </RelativeLayout>


        <LinearLayout
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="15dp"
            android:orientation="vertical">

            <TextView
                android:layout_marginTop="4dp"
                android:id="@+id/videoplay_vedio_title"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="秦时明月"
                android:textColor="#545454"
                android:textSize="13sp" />

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/videoplay_vedio_description"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="#7c7c7c"
                    android:textSize="11sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:src="@drawable/go_message"/>
            </LinearLayout>

            <RelativeLayout
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginBottom="-6dp">

                <ImageView
                    android:id="@+id/left1"
                    android:layout_width="11dp"
                    android:layout_height="11dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/play_home" />

                <TextView
                    android:id="@+id/videoplay_vedio_playCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="6dp"
                    android:layout_toRightOf="@+id/left1"
                    android:singleLine="true"
                    android:text="1,545"
                    android:textColor="#898989"
                    android:textSize="9sp" />

                <TextView
                    android:id="@+id/videoplay_vedio_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="06-20 更新"
                    android:textColor="#8c8c8c"
                    android:textSize="10sp"
                    android:layout_marginRight="3dp"/>
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15dp"
        android:background="#e2e2e2" />

</RelativeLayout>