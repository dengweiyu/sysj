<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ab_height"
                android:background="#ffffff"
                android:orientation="vertical">

    <!-- 7/11 32/38 -->
    <!-- 14/10 -->

    <ImageView
        android:id="@+id/ab_goback"
        android:layout_width="38dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:onClick="doBack"
        android:padding="12dp"
        android:scaleType="fitXY"
        android:src="@drawable/ab_goback_gray"
        android:visibility="visible"/>

    <include
        layout="@layout/menu_billboard"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/ab_videomanager_selected"
        android:layout_width="50dp"
        android:layout_height="24dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="12dp"
        android:background="@drawable/ab_edit_videomanager"
        android:clickable="true"
        android:gravity="center"
        android:text="@string/videomanager_selected"
        android:textColor="#5e5e5e"
        android:textSize="13sp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/ab_message_clean"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_alignParentRight="true"
        android:paddingStart="6dp"
        android:paddingEnd="6dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="12dp"
        android:background="@drawable/ab_edit_videomanager"
        android:clickable="true"
        android:gravity="center"
        android:text="清除未读"
        android:textColor="#5e5e5e"
        android:textSize="12sp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/ab_videomanager_cancel"
        android:layout_width="50dp"
        android:layout_height="24dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="12dp"
        android:background="@drawable/ab_edit_videomanager"
        android:clickable="true"
        android:gravity="center"
        android:text="@string/videomanager_cancel"
        android:textColor="#5e5e5e"
        android:textSize="13sp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/ab_videomanager_import"
        android:layout_width="50dp"
        android:layout_height="24dp"
        android:layout_toRightOf="@+id/ab_goback"
        android:layout_centerVertical="true"
        android:layout_marginLeft="6dp"
        android:background="@drawable/ab_edit_videomanager"
        android:clickable="true"
        android:gravity="center"
        android:text="@string/videomanager_import"
        android:textColor="#5e5e5e"
        android:textSize="13sp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/ab_scanqrcode_cancel"
        android:layout_width="50dp"
        android:layout_height="24dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="0dp"
        android:onClick="doBack"
        android:clickable="true"
        android:gravity="center"
        android:text="@string/scanqrcode_cancel"
        android:textColor="#ffffff"
        android:textSize="13sp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/ab_videomanager_delete"
        android:layout_width="50dp"
        android:layout_height="24dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="12dp"
        android:background="@drawable/ab_videomanager_delete"
        android:clickable="true"
        android:gravity="center"
        android:text="@string/videomanager_delete"
        android:textColor="#ffffff"
        android:textSize="13sp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/ab_report_cancel"
        android:layout_width="50dp"
        android:layout_height="28dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="6dp"
        android:background="@null"
        android:clickable="true"
        android:gravity="center"
        android:text="@string/report_cancel"
        android:textColor="@drawable/ab_report_cancel"
        android:textSize="13sp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/ab_report_confirm"
        android:layout_width="50dp"
        android:layout_height="28dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="6dp"
        android:background="@null"
        android:clickable="true"
        android:gravity="center"
        android:text="@string/report_confirm"
        android:textColor="@drawable/ab_report_cancel"
        android:textSize="13sp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/ab_mypersonalinfo_edit"
        android:layout_width="50dp"
        android:layout_height="28dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="6dp"
        android:background="@null"
        android:clickable="true"
        android:gravity="center"
        android:text="@string/mypersonalinfo_edit"
        android:textColor="@drawable/ab_mypersonalinfo_save"
        android:textSize="13sp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/ab_mypersonalinfo_save"
        android:layout_width="50dp"
        android:layout_height="28dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="6dp"
        android:background="@null"
        android:clickable="true"
        android:gravity="center"
        android:text="@string/mypersonalinfo_save"
        android:textColor="@drawable/ab_mypersonalinfo_save"
        android:textSize="13sp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/ab_mypersonalinfo_cancel"
        android:layout_width="50dp"
        android:layout_height="28dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="6dp"
        android:background="@null"
        android:clickable="true"
        android:gravity="center"
        android:text="@string/mypersonalinfo_cancel"
        android:textColor="@drawable/ab_mypersonalinfo_save"
        android:textSize="13sp"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/ab_collection_delete"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="18dp"
        android:clickable="true"
        android:padding="9dp"
        android:src="@drawable/ab_delete"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/ab_collection_cancel"
        android:layout_width="50dp"
        android:layout_height="28dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="12dp"
        android:clickable="true"
        android:gravity="center"
        android:text="@string/collection_cancel"
        android:textColor="#5e5e5e"
        android:textSize="13sp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/ab_collection_confirm"
        android:layout_width="50dp"
        android:layout_height="28dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:clickable="true"
        android:gravity="center"
        android:text="@string/collection_confirm"
        android:textColor="#5e5e5e"
        android:textSize="13sp"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/ab_groupdetail_plus"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:padding="9dp"
        android:src="@drawable/ab_plus_white"
        android:visibility="visible"/>

    <ImageView
        android:id="@+id/ab_groupdetail_download"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="6dp"
        android:layout_toLeftOf="@+id/ab_groupdetail_plus"
        android:clickable="true"
        android:paddingBottom="11dp"
        android:paddingLeft="9dp"
        android:paddingRight="9dp"
        android:paddingTop="7dp"
        android:src="@drawable/ab_download_white"
        android:visibility="visible"/>

    <ImageView
        android:id="@+id/ab_groupdetail_gift"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="6dp"
        android:layout_toLeftOf="@+id/ab_groupdetail_download"
        android:clickable="true"
        android:paddingBottom="11dp"
        android:paddingLeft="9dp"
        android:paddingRight="9dp"
        android:paddingTop="7dp"
        android:src="@drawable/ab_gift_white"
        android:visibility="visible"/>

    <ImageView
        android:id="@+id/ab_videoplay_share"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:padding="9dp"
        android:scaleType="fitCenter"
        android:src="@drawable/share_icon"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/ab_share_black"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:padding="11dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ab_share_gray"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/ab_question"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:padding="10dp"
        android:scaleType="fitCenter"
        android:background="@drawable/button_white"
        android:src="@drawable/mywallet_question"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/ab_videoplay_remark"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:padding="9dp"
        android:scaleType="fitCenter"
        android:src="#555555"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/ab_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="动态"
        android:textColor="#dd333333"
        android:textSize="16sp"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/ab_videoplay_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="38dp"
        android:ellipsize="marquee"
        android:gravity="center"
        android:singleLine="true"
        android:text="动态"
        android:textColor="#535353"
        android:textSize="13sp"
        android:visibility="gone"/>

    <Button
        android:visibility="gone"
        android:id="@+id/ab_imageview_done"
        android:layout_width="58dp"
        android:layout_height="22dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/ab_imageview_done"
        android:gravity="center"
        android:text="@string/imageview_done"
        android:textColor="#25c124"
        android:textSize="10sp"/>


    <!--标签-完成-->

    <TextView
        android:id="@+id/ab_tag_confirm"
        android:layout_width="@dimen/kaka_50"
        android:layout_height="@dimen/kaka_24"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/kaka_12"
        android:background="@drawable/ab_tag_confirm"
        android:clickable="true"
        android:gravity="center"
        android:text="@string/tag_confirm"
        android:textColor="#ffffff"
        android:textSize="13sp"
        android:visibility="gone"/>


    <include
        layout="@layout/menu_searchresult"
        android:visibility="gone"/>

</RelativeLayout>