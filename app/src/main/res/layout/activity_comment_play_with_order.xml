<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/activity_main_bg">
<LinearLayout
    android:id="@+id/ll_comment"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white">
        <include layout="@layout/toolbar_white" />

    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="1dp">
        <include
            layout="@layout/layout_coach_info_detail_header"></include>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="1dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <EditText
            android:id="@+id/et_comment"
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/ab_gray_round"
            android:padding="10dp"
            android:hint="评价奖励100魔豆"
            android:gravity="top|left"
            android:layout_height="100dp"
            android:textSize="14sp"
            android:textCursorDrawable="@null"
            android:layout_marginBottom="10dp"/>

            <RatingBar
                android:id="@+id/rb_score_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/CommentScoreStar"
                android:layout_gravity="center_horizontal"
                android:scaleX="0.8"
                android:scaleY="0.8"
                android:numStars="5"
                android:rating="5"
                android:stepSize="0.5"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/textcolor_french_gray"
                android:text="您的评价会让陪练做得更好"
                android:layout_marginBottom="20dp"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
    <TextView
        android:id="@+id/tv_commit_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ab_backdround_red"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:text="提交"
        android:padding="15dp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_comment_tag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_comment"></android.support.v7.widget.RecyclerView>
</RelativeLayout>