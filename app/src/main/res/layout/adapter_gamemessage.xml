<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="fill_parent"
                android:layout_height="58dp"
                android:background="@drawable/button_white">

    <com.li.videoapplication.views.RoundedImageView
        android:id="@+id/gameMessage_pic"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:scaleType="centerCrop"
        android:src="#222222"
        app:riv_border_color="#ffffff"
        app:riv_border_width="0dp"
        app:riv_corner_radius="4dp"
        app:riv_oval="false"/>

    <TextView
        android:id="@+id/gameMessage_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/gameMessage_pic"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/gameMessage_pic"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="咪咕宅男"
        android:textColor="#aa1b1b1b"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/gameMessage_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/gameMessage_pic"
        android:layout_alignLeft="@+id/gameMessage_title"
        android:layout_alignParentRight="true"
        android:layout_marginRight="43dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="花开花落花漫天，情来情去情随缘，惯看花谢花又开，却怕缘起缘又灭！"
        android:textColor="#ee666666"
        android:textSize="11sp"/>

    <TextView
        android:id="@+id/gameMessage_count"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="14dp"
        android:background="@drawable/count_point"
        android:gravity="center"
        android:text=""
        android:textColor="#ffffff"
        android:textSize="8sp"
        android:visibility="visible"/>

    <ImageView
        android:id="@+id/gameMessage_go"
        android:layout_width="6dp"
        android:layout_height="11dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:scaleType="fitXY"
        android:src="@drawable/go_message"
        android:visibility="visible"/>

</RelativeLayout>