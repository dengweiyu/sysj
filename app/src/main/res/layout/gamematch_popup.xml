<?xml version="1.0" encoding="utf-8"?>
<com.li.videoapplication.views.bubblelayout.BubbleLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:bl_arrowDirection="top"
    app:bl_arrowHeight="6dp"
    app:bl_arrowPosition="22dp"
    app:bl_arrowWidth="8dp"
    app:bl_bubbleColor="@color/white"
    app:bl_cornersRadius="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/gamematch_popup_course"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:text="赛事教程"
            android:background="@drawable/gamematch_popup_top_btn"
            android:textSize="16sp"
            android:textColor="@color/menu_main_red" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#d9d9d9"/>

        <TextView
            android:id="@+id/gamematch_popup_cs"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:text="视界客服"
            android:textSize="16sp"
            android:background="@drawable/gamematch_popup_bottom_btn"
            android:textColor="@color/text_color" />

    </LinearLayout>



</com.li.videoapplication.views.bubblelayout.BubbleLayout>