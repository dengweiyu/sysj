<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/white"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:paddingStart="8dp"
    android:paddingEnd="8dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/official_pic"
            android:layout_width="@dimen/kaka_90"
            android:layout_height="@dimen/kaka_56"
            android:background="#d7d7d7"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_marginLeft="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/official_title"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="视频标题"
                android:textColor="#6e6e6e"
                android:textSize="12sp"
                android:maxLines="1"
                android:gravity="center_vertical"
                android:ellipsize="end"
                android:paddingEnd="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="申请官方推荐"
                android:textColor="@color/title_bg_color"
                android:textSize="12sp"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:ellipsize="end"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider_bg"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:layout_marginTop="14dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付："
            android:textSize="15sp"
            android:textColor="#6e6e6e" />

        <TextView
            android:id="@+id/official_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:minWidth="26dp"
            android:textSize="15sp"
            android:textColor="@color/currency_red" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="飞磨豆"
            android:textSize="15sp"
            android:textColor="#6e6e6e" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="6dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/official_currency"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="余额："
            android:textColor="@color/title_bg_color"
            android:textSize="13sp"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:ellipsize="end"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="充值QQ："
            android:textColor="@color/title_bg_color"
            android:textSize="13sp"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:ellipsize="end"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2768484684"
            android:textColor="@color/currency_blue"
            android:textSize="13sp"
            android:gravity="center_vertical"
            android:textIsSelectable="true"
            android:maxLines="1"
            android:layout_marginRight="8dp"
            android:ellipsize="end"/>

    </LinearLayout>


    <TextView
        android:id="@+id/official_confirm"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/button_blue"
        android:gravity="center"
        android:text="确认支付"
        android:textColor="#ffffff"
        android:textSize="14sp" />

    <View
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider_bg"/>

    <TextView
        android:id="@+id/official_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="8dp"
        android:text="查看详情>>"
        android:textSize="11sp"
        android:textColor="#77CAFE"/>

</LinearLayout>