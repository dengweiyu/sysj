<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              xmlns:app="http://schemas.android.com/apk/res-auto"
  >

    <com.li.videoapplication.views.CircleImageView
        android:id="@+id/civ_coach_detail_user_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:scaleType="centerCrop"
        app:border_color="#DCDCDC"
        app:border_width="1px"
        android:layout_centerVertical="true"/>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"

        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_user_nick_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="14sp"
            android:textColor="@color/text_color"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="72dp"
            android:text="霸道总裁"/>

        <TextView
            android:id="@+id/tv_comment_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="10sp"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="2dp"
            android:textColor="@color/textcolor_french_gray"
            android:text="2017-8-11"/>

        <TextView
            android:id="@+id/tv_comment_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="12sp"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="2dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/textcolor_french_gray"

            android:text="大神技术很好"/>

        <TextView
            android:id="@+id/tv_open_all_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/ab_backdround_red"
            android:layout_gravity="right"
            android:textSize="12sp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="4dp"
            android:visibility="gone"
            android:text="查看全部"/>

    </LinearLayout>

    <RatingBar
        android:id="@+id/rb_comment_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        style="@style/ScoreStar"
        android:numStars="5"
        android:rating="5"/>
    </RelativeLayout>
</LinearLayout>