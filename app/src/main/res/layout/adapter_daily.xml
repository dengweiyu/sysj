<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/daily_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:layout_marginEnd="12dp"
    android:background="@drawable/shadow_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true">

        <ImageView
            android:id="@+id/daily_pic"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:src="@drawable/mywallet_upload" />

        <TextView
            android:id="@+id/daily_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/daily_pic"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="2dp"
            android:text="首次上传视频"
            android:textColor="@color/textcolor_gray"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/daily_ratio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/daily_name"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:paddingEnd="12dp"
            android:paddingStart="12dp"
            android:text="今日已完成：0/0"
            android:textColor="@color/textcolor_french_gray"
            android:textSize="9sp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/daily_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/daily_ratio"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="2"
            android:paddingEnd="12dp"
            android:paddingStart="12dp"
            android:text="奖励1000魔豆"
            android:textColor="@color/textcolor_french_gray"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/daily_shadow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="#64000000"
            android:gravity="center"
            android:text="已完成"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:visibility="gone" />
    </RelativeLayout>


</RelativeLayout>
