<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f4f4f4"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:ignore="RtlSymmetry,RtlHardcoded,ContentDescription">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.li.videoapplication.views.GridViewY1
                android:id="@+id/gridview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:background="@drawable/button_main"
                android:horizontalSpacing="3dp"
                android:verticalSpacing="5dp"
                android:numColumns="4"
                android:paddingBottom="8dp"
                android:paddingLeft="5dp"
                android:paddingRight="2dp"
                android:paddingTop="8dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="注："
                    android:textColor="@color/menu_main_red" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="该图片将作为本次的比赛凭证"
                    android:textColor="@color/text_color" />
            </LinearLayout>

            <!--<EditText-->
                <!--android:id="@+id/match_info"-->
                <!--android:layout_width="fill_parent"-->
                <!--android:layout_height="86dp"-->
                <!--android:layout_margin="8dp"-->
                <!--android:background="@drawable/button_main"-->
                <!--android:cursorVisible="true"-->
                <!--android:gravity="center_vertical|left|top"-->
                <!--android:hint="输入比赛信息（选填）"-->
                <!--android:paddingBottom="8dp"-->
                <!--android:paddingLeft="12dp"-->
                <!--android:paddingRight="12dp"-->
                <!--android:paddingTop="8dp"-->
                <!--android:textColor="#dd333333"-->
                <!--android:textColorHint="#898989"-->
                <!--android:textCursorDrawable="@drawable/signup_cursor"-->
                <!--android:textSize="12sp"-->
               <!--/>-->

        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/upload"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="16dp"
        android:background="@drawable/button_blue"
        android:gravity="center"
        android:text="立即提交"
        android:textColor="#ffffff"
        android:textSize="14sp" />

</LinearLayout>