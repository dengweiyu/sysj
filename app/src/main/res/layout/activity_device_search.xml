<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/searching_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white">

        <TextView
            android:id="@+id/choose_tv_textview"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="请选择要投影的电视"
            android:textColor="#363636"
            android:textSize="17sp"
            />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/choose_tv_textview"
            android:background="#cccccc"/>

        <ListView
            android:id="@+id/device_listview"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_below="@id/view"
            android:divider="#f2f2f2"
            android:dividerHeight="1px"
            />

        <RelativeLayout
            android:id="@+id/devices"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_below="@id/view">

            <LinearLayout
                android:id="@+id/searching_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                >

                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:text="正在查找设备"
                    android:textColor="#363636"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/cannot_find_device"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:visibility="gone"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="木有找到设备"
                    android:textColor="#363636"
                    android:textSize="20sp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="1.请确保手机与电视接入同一网络"
                    android:textColor="#505050"
                    android:textSize="12sp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="2.请确保电视端安装乐播投屏"
                    android:textColor="#505050"
                    android:textSize="12sp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="3.尝试重启乐播投屏电视接收端"
                    android:textColor="#505050"
                    android:textSize="12sp"
                    />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_below="@+id/devices"
            android:id="@+id/bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_title_height_76dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_horizontal_margin_0.5dp"
                android:background="@color/divider_bg" />

            <LinearLayout
                android:id="@+id/down_hpplay_app"
                android:layout_width="@dimen/layout_title_height_200dp"
                android:layout_height="@dimen/layout_title_height_46dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:background="@drawable/custom_radius_button_selector"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="@dimen/activity_title_width_40dp"
                    android:layout_height="@dimen/activity_title_width_40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/activity_title_width"
                    android:src="@drawable/download_icon" />

                <TextView
                    android:id="@+id/textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/layout_title_height_5dp"
                    android:text="@string/down_happly_tv"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/activity_title_size_15sp" />
            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

    <View
        android:id="@+id/device_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/searching_dialog"
        android:background="#88262626" />

</RelativeLayout>