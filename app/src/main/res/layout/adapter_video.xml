<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/button_white"
              android:orientation="vertical"
              android:descendantFocusability="blocksDescendants">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 150 -->
        <RelativeLayout
            android:id="@+id/root"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- 86/148 -->

            <ImageView
                android:id="@+id/video_cover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop"
                android:src="#555555"/>

            <RelativeLayout
                android:id="@+id/bottom"
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:layout_alignParentBottom="true"
                android:background="#88000000">

                <ImageView
                    android:id="@+id/video_play"
                    android:layout_width="9dp"
                    android:layout_height="9dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="7dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/play_home"/>

                <TextView
                    android:id="@+id/video_allTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="6dp"
                    android:text=""
                    android:hint="0"
                    android:textColor="#ffffff"
                    android:textSize="9dp"/>

                <TextView
                    android:id="@+id/video_playCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="7dp"
                    android:layout_toRightOf="@+id/video_play"
                    android:text=""
                    android:hint="0"
                    android:textColor="#ffffff"
                    android:textSize="9dp"/>
            </RelativeLayout>

            <!-- 22 -->

            <CheckBox
                android:visibility="gone"
                android:id="@+id/vedio_deleteState"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_above="@+id/bottom"
                android:layout_alignParentRight="true"
                android:enabled="false"
                android:clickable="false"
                android:layout_marginBottom="4dp"
                android:layout_marginRight="6dp"
                android:button="@null"
                android:checked="true"
                android:background="@drawable/choose_check"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/video_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="6dp"
            android:ellipsize="end"
            android:lines="2"
            android:text=""
            android:textColor="#696969"
            android:textSize="10dp"/>
    </LinearLayout>

    <ImageView
        android:visibility="visible"
        android:id="@+id/vedio_deleteButton"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</FrameLayout>