<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="#00000000"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/tb_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ab_goback_white"
        android:padding="13dp"/>

    <TextView
        android:id="@+id/tb_title"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:textSize="17sp"
        android:textColor="#ffffff"
        android:text=""
        android:ellipsize="end"
        android:maxLines="1"
        android:gravity="center"/>


    <ImageView
        android:id="@+id/tb_gift"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/tb_download"
        android:clickable="true"
        android:padding="4dp"
        android:layout_marginRight="4dp"
        android:src="@drawable/tb_gift_round"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/tb_download"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:src="@drawable/tb_download_round"
        android:padding="4dp"
        android:layout_toLeftOf="@+id/tb_plus"
        android:layout_marginRight="4dp"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/tb_plus"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="4dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:padding="4dp"
        android:src="@drawable/tb_plus_round"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/tb_share"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="4dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:padding="10dp"
        android:src="@drawable/videoplay_share"
        android:visibility="gone"/>
</LinearLayout>