<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="#00000000"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/tb_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ab_goback_white"
        android:padding="11dp"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:id="@+id/tb_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="17sp"
        android:textColor="#ffffff"
        android:text="标题"
        android:singleLine="true"
        android:layout_centerInParent="true"
        android:gravity="center_vertical"/>


    <ImageView
        android:id="@+id/tb_gift"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/tb_download"
        android:clickable="true"
        android:padding="4dp"
        android:layout_marginRight="4dp"
        android:src="@drawable/tb_gift_round"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/tb_download"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:src="@drawable/tb_download_round"
        android:padding="4dp"
        android:layout_toLeftOf="@+id/tb_plus"
        android:layout_marginRight="4dp"/>

    <ImageView
        android:id="@+id/tb_plus"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="4dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:padding="4dp"
        android:src="@drawable/tb_plus_round"
        android:visibility="visible"/>

</RelativeLayout>