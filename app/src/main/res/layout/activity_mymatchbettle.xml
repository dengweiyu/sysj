<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:clipToPadding="true"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="2dp">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white">

            <include layout="@layout/toolbar_white" />

        </android.support.v7.widget.Toolbar>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#eaeaea"
            tools:ignore="PxUsage" />
    </android.support.design.widget.AppBarLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="#f5f5f5" />

    <ScrollView
        android:id="@+id/havedata_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:background="@color/white"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="8dp">

                    <LinearLayout
                        android:id="@+id/scheduleview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingTop="6dp"
                        android:visibility="visible">

                        <TextView
                            android:id="@+id/ongoing_process"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text=""
                            android:textColor="#686868"
                            android:textSize="18sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="对战时间："
                                android:textColor="#686868"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/ongoing_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="@color/ab_backdround_red"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:layout_marginEnd="58dp"
                            android:layout_marginStart="58dp"
                            android:layout_marginTop="8dp"
                            android:background="#c1ded1d0" />

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="12dp"
                            android:orientation="horizontal"
                            android:transitionName="finishmatch">

                            <LinearLayout
                                android:id="@+id/mybgline"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="12dp"
                                android:layout_weight="1"
                                android:paddingBottom="9dp"
                                android:background="@drawable/match_userinfo"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/myresult_text"
                                    android:layout_width="match_parent"
                                    android:layout_height="28dp"
                                    android:background="@color/menu_main_red"
                                    android:gravity="center"
                                    android:text="我方胜"
                                    android:textColor="@color/white"
                                    android:textSize="13sp" />

                                <com.li.videoapplication.views.CircleImageView
                                    android:id="@+id/myicon"
                                    android:layout_width="61dp"
                                    android:layout_height="61dp"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="12dp"
                                    android:scaleType="centerCrop"
                                    android:src="#e1e1e1" />

                                <TextView
                                    android:id="@+id/myname"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="12dp"
                                    android:text=""
                                    android:singleLine="true"
                                    android:ellipsize="end"
                                    android:maxEms="8"
                                    android:textColor="#686868"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/myteamname"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="5dp"
                                    android:text="战队名："
                                    android:ellipsize="end"
                                    android:maxEms="10"
                                    android:singleLine="true"
                                    android:visibility="gone"
                                    android:textColor="#a1a1a1"
                                    android:textSize="12sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/enemybgline"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="12dp"
                                android:layout_weight="1"
                                android:background="@drawable/match_userinfo_lose"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/enemyresult_text"
                                    android:layout_width="match_parent"
                                    android:layout_height="28dp"
                                    android:background="#ababab"
                                    android:gravity="center"
                                    android:text="敌方败"
                                    android:textColor="@color/white"
                                    android:textSize="13sp" />

                                <com.li.videoapplication.views.CircleImageView
                                    android:id="@+id/enemyicon"
                                    android:layout_width="61dp"
                                    android:layout_height="61dp"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="12dp"
                                    android:scaleType="centerCrop"
                                    android:src="#e1e1e1" />

                                <TextView
                                    android:id="@+id/enemyname"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="12dp"
                                    android:text=""
                                    android:singleLine="true"
                                    android:ellipsize="end"
                                    android:maxEms="8"
                                    android:textColor="#686868"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/enemyteamname"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="5dp"
                                    android:text="战队名："
                                    android:singleLine="true"
                                    android:ellipsize="end"
                                    android:maxEms="10"
                                    android:textColor="#a1a1a1"
                                    android:textSize="12sp"
                                    android:visibility="gone"/>
                            </LinearLayout>
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/myresult_image"
                            android:layout_width="78dp"
                            android:layout_height="78dp"
                            android:layout_centerInParent="true"
                            android:transitionName="signet"
                            android:src="@drawable/matchresult_win_signet" />

                    </RelativeLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:background="#f6f6f6"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <LinearLayout
                        android:id="@+id/buttonview"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content"
                        android:visibility="visible">

                        <Button
                            android:id="@+id/upload_image"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginEnd="24dp"
                            android:layout_marginStart="24dp"
                            android:layout_marginTop="20dp"
                            android:background="@drawable/button_red"
                            android:text="您已获胜"
                            android:clickable="false"
                            android:textColor="#ffffff"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/upload_image_hint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="3dp"
                            android:text="截图已上传，请耐心等待结果。"
                            android:textColor="#848484"
                            android:textSize="12sp"
                            android:visibility="gone" />

                        <FrameLayout
                            android:id="@+id/ongoing_progress_container"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginEnd="24dp"
                            android:layout_marginStart="24dp"
                            android:layout_marginTop="18dp"
                            android:background="@drawable/stroke_red">

                            <ProgressBar
                                android:id="@+id/ongoing_progress"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:max="100"
                                android:progress="0"
                                android:progressDrawable="@drawable/progress_bg"
                                android:visibility="visible" />

                            <TextView
                                android:id="@+id/ongoing_uploadtext"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="上传视频"
                                android:textColor="@color/menu_main_red"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/ongoing_progress_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="0%"
                                android:textColor="@color/black"
                                android:textSize="15sp"
                                android:visibility="gone" />
                        </FrameLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/tipsview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="40dp"
                        android:layout_marginEnd="12dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/ongoing_gray"
                        android:orientation="vertical"
                        android:paddingBottom="12dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:paddingTop="12dp"
                        android:visibility="visible">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1."
                                android:textColor="@color/menu_main_red"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/ongoing_notice1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:text="上传比赛视频奖励500魔豆"
                                android:textColor="#848484"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2."
                                android:textColor="@color/menu_main_red"
                                android:textSize="14sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:text="对判罚结果有任何疑问，请联系"
                                android:textColor="#848484"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/ongoing_customerservice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingRight="14dp"
                                android:text="客服"
                                android:textColor="@color/menu_main_red"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="3."
                                android:textColor="@color/menu_main_red"
                                android:textSize="14sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:text="比赛结束后24小时内可上传视频"
                                android:textColor="#848484"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</LinearLayout>