<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="match_parent"
              android:background="@drawable/button_white"
              android:orientation="vertical">

    <!-- 66 -->

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="66dp">

        <com.li.videoapplication.views.CircleImageView
            android:id="@+id/mytask_head"
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:scaleType="centerCrop"
            android:src="#222222"/>

        <LinearLayout
            android:id="@+id/top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/mytask_head"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/mytask_head"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mytask_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_main"
                android:ellipsize="end"
                android:maxWidth="120dp"
                android:singleLine="true"
                android:text="没事刚开始没事刚开始没事刚开始"
                android:textColor="#535353"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/mytask_level"
                android:layout_width="20dp"
                android:layout_height="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/level_slider_bg"
                android:gravity="center"
                android:text="Lv.1"
                android:textColor="#ffffff"
                android:textSize="7sp"
                android:textStyle="italic"/>

            <ImageView
                android:id="@+id/mytask_question"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="6dp"
                android:scaleType="fitCenter"
                android:src="@drawable/mytask_question"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/mytask_head"
            android:layout_alignLeft="@+id/top"
            android:layout_marginBottom="6dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ProgressBar
                android:id="@+id/mytask_level_bar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="106dp"
                android:layout_height="6dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:max="100"
                android:progress="40"
                android:progressDrawable="@drawable/level_mypersoninfo_progress"
                android:secondaryProgress="70"/>

            <TextView
                android:id="@+id/mytask_level_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="12/15"
                android:textColor="#717171"
                android:textSize="9sp"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/dynamic_go"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="17dp"
            android:scaleType="fitXY"
            android:src="@drawable/go_mytask"/>
    </RelativeLayout>

</LinearLayout>