<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <com.li.videoapplication.ui.view.VideoEditorActionBar
        android:id="@+id/videoEditorActionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.li.videoapplication.ui.view.PlayingView
        android:id="@+id/playingView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#000000"/>

    <com.li.videoapplication.ui.view.VideoEditorMenu
        android:id="@+id/videoEditorMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <FrameLayout
        android:id="@+id/videoeditor_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:visibility="visible"
        android:background="@color/menu_videoeditor_gray">

        <com.li.videoapplication.ui.view.BackgroundView
            android:id="@+id/backgroundView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </FrameLayout>

    <com.li.videoapplication.ui.view.BottomView
        android:id="@+id/bottomView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"/>

</LinearLayout>