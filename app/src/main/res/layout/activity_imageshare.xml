<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="#ffffff"
              android:clipToPadding="true"
              android:fitsSystemWindows="true"
              android:orientation="vertical"
              tools:ignore="RtlSymmetry,RtlHardcoded,ContentDescription">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#e2e2e2"/>

            <com.li.videoapplication.views.GridViewY1
                android:id="@+id/gridview"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:horizontalSpacing="10dp"
                android:numColumns="4"
                android:paddingBottom="16dp"
                android:paddingLeft="13dp"
                android:paddingRight="13dp"
                android:paddingTop="10dp"
                android:verticalSpacing="10dp"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#e2e2e2"/>

            <EditText
                android:id="@+id/imageshare_headline"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:background="@null"
                android:ems="10"
                android:gravity="center_vertical|left"
                android:hint="@string/imageshare_headline"
                android:maxLines="1"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text=""
                android:textColor="#dd333333"
                android:textColorHint="#898989"
                android:textSize="12sp">
            </EditText>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#e2e2e2"/>

            <LinearLayout
                android:id="@+id/imageshare_type"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:background="@drawable/imageshare_type_btn"
                android:orientation="horizontal"
                android:paddingRight="10dp">

                <TextView
                    android:id="@+id/imageshare_type_text"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="10"
                    android:gravity="center_vertical"
                    android:hint="@string/imageshare_type"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text=""
                    android:textColor="#dd333333"
                    android:textColorHint="#898989"
                    android:textSize="12sp"/>

                <ImageView
                    android:id="@+id/imageshare_type_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:layout_weight="1"
                    android:background="@drawable/moretype_triangle_right"
                    android:paddingRight="10dp"
                    android:scaleX="0.8"
                    android:scaleY="0.8"/>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="#e2e2e2"/>

            <EditText
                android:id="@+id/imageshare_description"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:ems="10"
                android:hint="@string/imageshare_description"
                android:maxLines="5"
                android:minHeight="40dp"
                android:paddingBottom="12dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="12dp"
                android:textColor="#dd333333"
                android:textColorHint="#898989"
                android:textSize="12sp"/>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="bottom"
        android:layout_weight="0"
        android:orientation="vertical">

        <TextView
            android:id="@+id/imageshare_submit"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:background="@drawable/button_blue"
            android:gravity="center"
            android:text="@string/imageshare_share_now"
            android:textColor="#ffffff"
            android:textSize="14sp"/>
    </LinearLayout>

</LinearLayout>