<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:background="@drawable/background_press"
                android:descendantFocusability="blocksDescendants">

    <com.li.videoapplication.views.RoundedImageView
        android:id="@+id/classifiedgame_pic"
        android:layout_width="39dp"
        android:layout_height="39dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="14dp"
        android:src="#555555"
        app:riv_border_color="#ffffff"
        app:riv_border_width="0dp"
        app:riv_corner_radius="4dp"
        app:riv_oval="false"/>

    <TextView
        android:id="@+id/classifiedgame_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/classifiedgame_pic"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/classifiedgame_pic"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="秦时明月"
        android:textColor="#242424"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/classifiedgame_focus"
        android:layout_width="42dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="12dp"
        android:background="@drawable/player_focus"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="@string/dynamic_focus"
        android:textColor="@color/groupdetail_player_red"
        android:textSize="11sp"
        android:visibility="visible"/>

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignBottom="@+id/classifiedgame_pic"
        android:layout_toEndOf="@+id/classifiedgame_pic">

        <TextView
            android:id="@+id/classifiedgame_left"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="话题  0"
            android:textColor="#646464"
            android:textSize="10sp"/>

        <TextView
            android:id="@+id/classifiedgame_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="关注 0"
            android:textColor="#646464"
            android:textSize="10sp"/>
    </LinearLayout>
    <!-- #ff372d -->

</RelativeLayout>