<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/button_main"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/button_main"
                android:paddingTop="14dp"
                android:paddingBottom="14dp">

                <com.li.videoapplication.views.CircleImageView
                    android:id="@+id/civ_avatar"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:layout_marginStart="14dp" />

                <TextView
                    android:id="@+id/tv_reply_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/civ_avatar"
                    android:layout_marginStart="9dp"
                    android:layout_toEndOf="@id/civ_avatar"
                    android:text="加载中..."
                    android:textColor="#ee414141"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="加载中..."
                    android:textColor="#ee666666"
                    android:textSize="13sp"
                    android:layout_below="@+id/tv_reply_name"
                    android:layout_alignStart="@+id/tv_reply_name" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/button_main"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_reply_amount"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textColor="#ee666666"
                    android:text="回复"
                    android:textSize="15sp" />

                <android.support.v4.widget.SwipeRefreshLayout
                    android:id="@+id/srl_reply"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="4dp">
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_reply"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </android.support.v4.widget.SwipeRefreshLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:background="@drawable/button_main">

        <RelativeLayout
            android:id="@+id/rl_comment"
            android:layout_width="match_parent"
            android:layout_height="42dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/activity_main_bg" />

            <View
                android:id="@+id/v_comment_face"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/face_normal_205" />

            <TextView
                android:id="@+id/tv_submit"
                android:layout_width="42dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:background="@drawable/comment_submit"
                android:gravity="center"
                android:text="发送"
                android:textColor="#656565"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/et_comment"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:layout_toEndOf="@id/v_comment_face"
                android:layout_toStartOf="@id/tv_submit"
                android:background="@drawable/commemt_edit"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:hint="本宝宝有话要说"
                android:lines="3"
                android:paddingLeft="15dp"
                android:textColor="#656565"
                android:textColorHint="#a9a9a9"
                android:textCursorDrawable="@null"
                android:textSize="12sp" />
        </RelativeLayout>

        <ViewStub
            android:id="@+id/vs_face"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:padding="5dp"
            android:layout="@layout/view_face"/>
    </LinearLayout>

</FrameLayout>
