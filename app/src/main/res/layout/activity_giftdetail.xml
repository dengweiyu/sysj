<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff"
                android:clipToPadding="true"
                android:fitsSystemWindows="true"
                android:orientation="vertical"
                tools:ignore="DuplicateIds">

    <!-- 91 -->

    <RelativeLayout
        android:id="@+id/left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="14dp"
        android:paddingTop="14dp">

        <ImageView
            android:id="@+id/giftdetail_pic"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:scaleType="fitCenter"
            android:src="@null"/>

        <TextView
            android:id="@+id/giftdetail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/giftdetail_pic"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/giftdetail_pic"
            android:text=""
            android:hint="@string/loading_text"
            android:textColor="#545454"
            android:textSize="14sp"/>

        <!-- #868686 #ff403c -->

        <TextView
            android:id="@+id/giftdetail_remaining"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/giftdetail_title"
            android:layout_below="@+id/giftdetail_title"
            android:layout_marginTop="4dp"
            android:text="剩余数量："
            android:textColor="#868686"
            android:textSize="11sp"/>


        <LinearLayout
            android:id="@+id/middle"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/giftdetail_title"
            android:layout_below="@+id/giftdetail_remaining"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/giftdetail_platform"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/giftdetail_title"
                android:layout_below="@+id/giftdetail_remaining"
                android:text="适用平台："
                android:textColor="#868686"
                android:textSize="11sp"/>

            <ImageView
                android:id="@+id/giftdetail_ios"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginLeft="4dp"
                android:scaleType="fitCenter"
                android:src="@drawable/gift_ios_green"
                android:layout_toRightOf="@+id/giftdetail_platform"
                android:layout_alignBottom="@+id/giftdetail_platform"
                android:layout_marginBottom="0.5dp"/>

            <ImageView
                android:id="@+id/giftdetail_android"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginLeft="8dp"
                android:scaleType="fitCenter"
                android:src="@drawable/gift_android_green"
                android:layout_toRightOf="@+id/giftdetail_platform"
                android:layout_alignBottom="@+id/giftdetail_platform"
                android:layout_marginBottom="0.5dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/giftdetail_valid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/middle"
            android:layout_below="@+id/middle"
            android:layout_marginTop="4dp"
            android:text="有效期："
            android:textColor="#868686"
            android:textSize="11sp"/>
    </RelativeLayout>

    <!-- 91 -->

    <View
        android:id="@+id/second"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/left"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:background="#e2e2e2"/>

    <RelativeLayout
        android:id="@+id/third"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/left"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:paddingBottom="4dp"
        android:paddingTop="16dp">

        <LinearLayout
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:src="@drawable/giftdetail_point_yellow"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:text="@string/giftdetail_content"
                android:textColor="#545454"
                android:textSize="13sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/giftdetail_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/top"
            android:layout_below="@+id/top"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="8dp"
            android:text=""
            android:hint="@string/loading_text"
            android:textColor="#868686"
            android:textSize="11sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/third"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:paddingBottom="4dp"
        android:paddingTop="16dp">

        <LinearLayout
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:src="@drawable/giftdetail_point_yellow"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:text="@string/giftdetail_usage"
                android:textColor="#545454"
                android:textSize="13sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/giftdetail_usage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/top"
            android:layout_below="@+id/top"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="8dp"
            android:text=""
            android:hint="@string/loading_text"
            android:textColor="#868686"
            android:textSize="11sp"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/giftdetail_receive"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="44dp"
        android:layout_marginLeft="42dp"
        android:layout_marginRight="42dp"
        android:background="@drawable/giftdetail_receive"
        android:gravity="center"
        android:text="@string/giftdetail_receive"
        android:textColor="#ffffff"
        android:textSize="14sp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/giftdetail_copy"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="44dp"
        android:layout_marginLeft="42dp"
        android:layout_marginRight="42dp"
        android:background="@drawable/giftdetail_copy"
        android:gravity="center"
        android:text="@string/giftdetail_copy"
        android:textColor="#ffffff"
        android:textSize="14sp"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/giftdetail_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/giftdetail_copy"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="9dp"
        android:text=""
        android:hint="@string/loading_text"
        android:textColor="#707070"
        android:textSize="11sp"/>

</RelativeLayout>