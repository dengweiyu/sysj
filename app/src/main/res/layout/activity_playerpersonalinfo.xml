<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f7f7f7"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    tools:ignore="DuplicateIds,UnusedAttribute,HardcodedText,RtlHardcoded,SmallSp">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#e2e2e2" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="horizontal"
            android:paddingBottom="9dp"
            android:paddingLeft="19dp"
            android:paddingRight="19dp"
            android:paddingTop="9dp">

            <TextView
                android:id="@+id/left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/playerpersonalinfo_head"
                android:background="#00ffffff"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/mypersonalinfo_head"
                android:textColor="#6d6d6d"
                android:textSize="12sp" />

            <com.li.videoapplication.views.CircleImageView
                android:id="@+id/playerpersonalinfo_head"
                android:layout_width="41dp"
                android:layout_height="41dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:scaleType="centerCrop" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="19dp"
            android:background="#e2e2e2" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="horizontal"
            android:paddingBottom="9dp"
            android:paddingLeft="19dp"
            android:paddingRight="19dp"
            android:paddingTop="9dp">

            <TextView
                android:id="@+id/left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/mypersonalinfo_name"
                android:textColor="#6d6d6d"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/playerpersonalinfo_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@+id/left"
                android:gravity="right"
                android:text=""
                android:textColor="#6d6d6d"
                android:textSize="12sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="19dp"
            android:background="#e2e2e2" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="horizontal"
            android:paddingBottom="9dp"
            android:paddingLeft="19dp"
            android:paddingRight="19dp"
            android:paddingTop="9dp">

            <TextView
                android:id="@+id/left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/mypersonalinfo_gender"
                android:textColor="#6d6d6d"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/playerpersonalinfo_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@+id/left"
                android:gravity="right"
                android:text=""
                android:textColor="#6d6d6d"
                android:textSize="12sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="19dp"
            android:background="#e2e2e2" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="horizontal"
            android:paddingBottom="9dp"
            android:paddingLeft="19dp"
            android:paddingRight="19dp"
            android:paddingTop="9dp">

            <TextView
                android:id="@+id/left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/mypersonalinfo_introduce"
                android:textColor="#6d6d6d"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/playerpersonalinfo_introduce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@+id/left"
                android:gravity="right"
                android:hint="@string/dynamic_introduce_hint"
                android:text=""
                android:textColor="#6d6d6d"
                android:textColorHint="#886d6d6d"
                android:textSize="12sp" />
        </RelativeLayout>

        <View
            android:id="@+id/divider_1"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="19dp"
            android:background="#e2e2e2" />

        <RelativeLayout
            android:id="@+id/playerpersonalinfo_qq_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="horizontal"
            android:paddingBottom="9dp"
            android:paddingLeft="19dp"
            android:paddingRight="19dp"
            android:paddingTop="9dp">

            <TextView
                android:id="@+id/left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/mypersonalinfo_qq"
                android:textColor="#6d6d6d"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/playerpersonalinfo_qq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@+id/left"
                android:gravity="right"
                android:text=""
                android:textColor="#6d6d6d"
                android:textSize="12sp" />
        </RelativeLayout>

        <View
            android:id="@+id/divider_2"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="19dp"
            android:background="#e2e2e2" />

        <RelativeLayout
            android:id="@+id/playerpersonalinfo_mobile_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="horizontal"
            android:paddingBottom="9dp"
            android:paddingLeft="19dp"
            android:paddingRight="19dp"
            android:paddingTop="9dp">

            <TextView
                android:id="@+id/left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="手机号码"
                android:textColor="#6d6d6d"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/playerpersonalinfo_mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@+id/left"
                android:gravity="right"
                android:text=""
                android:textColor="#6d6d6d"
                android:textSize="12sp" />
        </RelativeLayout>

        <View
            android:id="@+id/divider_2"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="19dp"
            android:background="#e2e2e2" />

        <RelativeLayout
            android:id="@+id/playerpersonalinfo_like_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="horizontal"
            android:paddingBottom="9dp"
            android:paddingLeft="19dp"
            android:paddingRight="19dp"
            android:paddingTop="16dp">

            <TextView
                android:id="@+id/left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/playerpersonalinfo_like"
                android:textColor="#6d6d6d"
                android:textSize="12sp" />

            <com.li.videoapplication.views.HorizontalListView
                android:id="@+id/horizontallistvierw"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_below="@+id/left"
                android:layout_marginTop="12dp"
                android:background="#00e2e2e2" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#e2e2e2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_alignParentBottom="true"
        android:background="#ededed"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:id="@+id/playerpersonalinfo_focus"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:background="@drawable/button_white"
            android:gravity="center"
            android:text="关注"
            android:textColor="@color/menu_main_red"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/playerpersonalinfo_sendmessage"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:background="@drawable/button_red"
            android:gravity="center"
            android:text="发消息"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>


</RelativeLayout>