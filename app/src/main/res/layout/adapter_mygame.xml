<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="48dp"
    android:background="@drawable/button_main">

    <com.li.videoapplication.views.RoundedImageView
        android:id="@+id/mygame_pic"
        android:layout_width="39dp"
        android:layout_height="39dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="14dp"
        android:src="#555555"
        app:riv_border_color="#ffffff"
        app:riv_border_width="0dp"
        app:riv_corner_radius="4dp"
        app:riv_oval="false" />

    <TextView
        android:id="@+id/mygame_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/mygame_pic"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/mygame_pic"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="秦时明月"
        android:textColor="#242424"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/mygame_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/mygame_pic"
        android:layout_alignLeft="@+id/mygame_title"
        android:layout_marginBottom="4dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="视频  2020 关注 201"
        android:textColor="#646464"
        android:textSize="10sp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/mygame_go"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/mygame_title"
        android:layout_marginRight="12dp"
        android:padding="1dp"
        android:scaleType="fitXY"
        android:src="@drawable/go_home" />

    <!-- #ff372d -->

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/mygame_pic"
        android:layout_marginBottom="2dp"
        android:layout_toRightOf="@+id/mygame_pic"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/mygame_topic"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="话题数  202"
            android:textColor="#646464"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/mygame_remark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="关注 201"
            android:textColor="#646464"
            android:textSize="10sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/mygame_mark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/mygame_pic"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="44dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="今日新增内容："
        android:textColor="#646464"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/mygame_mark_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/mygame_go"
        android:layout_alignBottom="@+id/mygame_pic"
        android:layout_marginBottom="2dp"
        android:text="99+"
        android:textColor="#ff5f5d"
        android:textSize="10sp" />


</RelativeLayout>