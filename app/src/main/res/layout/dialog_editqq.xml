<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="34dp"
    android:layout_marginRight="34dp"
    android:background="@drawable/button_main_round"
    android:orientation="vertical">

    <TextView
        android:id="@+id/editqq_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="28dp"
        android:text="添加QQ"
        android:textColor="@color/text_color"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/editqq_qq"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginEnd="14dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/edittext_shape_graybg"
        android:cursorVisible="true"
        android:gravity="center_vertical"
        android:hint="请输入您的QQ号"
        android:maxLines="1"
        android:textColor="@color/text_color"
        android:textColorHint="#d6d6d6"
        android:textCursorDrawable="@drawable/cursor_red"
        android:textSize="14sp"
        android:inputType="number"/>

    <TextView
        android:id="@+id/editqq_confirm"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="14dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/dialog_registermobile_red"
        android:clickable="true"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="16sp" />

</LinearLayout>
