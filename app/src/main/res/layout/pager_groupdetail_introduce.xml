<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <ImageView
            android:id="@+id/iv_group_detail_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
           />
        <TextView
            android:id="@+id/tv_group_detati_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_group_detail_icon"
            android:layout_marginLeft="5dp"
            android:textColor="#565656"
            android:text="王者荣耀"/>
        <TextView
            android:id="@+id/tv_group_detati_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_group_detati_name"
            android:layout_alignParentBottom="true"
            android:paddingBottom="5dp"
            android:textSize="10sp"
            android:text="类型：体育竞技"/>
        <TextView
            android:id="@+id/tv_group_detati_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/tv_group_detati_type"
            android:paddingBottom="5dp"
            android:layout_marginLeft="20dp"
            android:textSize="10sp"
            android:text="下载：35000"/>
        <ImageView
            android:id="@+id/iv_group_detail_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/groupdetail_introduce"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="13dp"
        android:text=""
        android:hint="@string/loading_text"
        android:textColor="#565656"
        android:textSize="13sp"/>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>