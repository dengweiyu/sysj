<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/rl_introduce_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:padding="10dp">
        <ImageView
            android:id="@+id/iv_group_detail_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="fitXY"
           />
        <TextView
            android:id="@+id/tv_group_detail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_group_detail_icon"
            android:layout_marginLeft="10dp"
            android:textColor="#565656"
            android:text=""/>
        <TextView
            android:id="@+id/tv_group_detail_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_group_detail_name"
            android:layout_alignParentBottom="true"
            android:paddingBottom="5dp"
            android:textSize="10sp"
            android:text=""/>
        <TextView
            android:id="@+id/tv_group_detail_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/tv_group_detail_type"
            android:paddingBottom="5dp"
            android:layout_marginLeft="20dp"
            android:textSize="10sp"
            android:text=""/>
        <TextView
            android:id="@+id/tv_group_detail_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="打开"
            android:textSize="10sp"
            android:background="@drawable/fragment_group_detail_introduce_open"
            android:textColor="@color/currency_red"
            android:layout_alignParentRight="true"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:paddingLeft="@dimen/layout_title_height_15dp"
            android:paddingRight="@dimen/layout_title_height_15dp"
            android:layout_marginRight="@dimen/layout_title_height_10dp"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/groupdetail_introduce"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="13dp"
        android:text=""
        android:hint="@string/loading_text"
        android:textColor="#565656"
        android:textSize="13sp"/>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>