<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/rl_introduce_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp">
        <com.li.videoapplication.views.RoundedImageView
            android:id="@+id/iv_group_detail_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="fitXY"
            android:layout_marginBottom="@dimen/layout_title_height_15dp"
            app:riv_border_color="#ffffff"
            app:riv_border_width="0dp"
            app:riv_corner_radius="8dp"
            app:riv_oval="false"
           />
        <TextView
            android:id="@+id/tv_group_detail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_group_detail_icon"
            android:layout_marginLeft="10dp"
            android:textColor="#565656"
            android:textSize="12sp"
            android:paddingTop="2dp"
            android:text="王者荣耀"/>
        <TextView
            android:id="@+id/tv_group_detail_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_group_detail_name"
            android:layout_alignBottom="@+id/iv_group_detail_icon"
            android:textSize="11sp"
            android:text=""/>
        <TextView
            android:id="@+id/tv_group_detail_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_group_detail_type"
            android:layout_alignTop="@+id/tv_group_detail_type"
            android:layout_marginLeft="20dp"
            android:paddingBottom="2dp"
            android:textSize="10sp"
            android:visibility="gone"
            android:text=""/>
        <TextView
            android:id="@+id/tv_group_detail_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="打开"
            android:textSize="10sp"
            android:background="@drawable/fragment_group_detail_introduce_open"
            android:textColor="@color/currency_red"
            android:layout_alignParentRight="true"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:paddingLeft="@dimen/layout_title_height_15dp"
            android:paddingRight="@dimen/layout_title_height_15dp"
            android:layout_marginRight="@dimen/layout_title_height_10dp"
            android:layout_centerInParent="true"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="#88e4e4e4"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/groupdetail_introduce"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="13dp"
        android:text=""
        android:hint="@string/loading_text"
        android:textColor="#565656"
        android:textSize="13sp"/>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>