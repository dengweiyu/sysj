<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="28dp"
    android:layout_marginRight="28dp"
    android:background="@drawable/button_main_round"
    android:orientation="vertical">

    <ImageView
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:src="@drawable/signup_success" />

    <TextView
        android:id="@+id/dialog_signup_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="报名成功"
        android:textColor="@color/text_color"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/dialog_signup_tip1_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1."
            android:textColor="@color/text_color"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/dialog_signup_tip1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="2dp"
            android:text="请在06月01日 15:30~15:40到赛规页面签到。"
            android:textColor="@color/text_color"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dialog_signup_tip2_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="4dp"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2."
            android:textColor="@color/text_color"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/dialog_signup_tip2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="5dp"
            android:text="比赛将于16:30开始，请准时参加。"
            android:textColor="@color/text_color"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:background="#e4e4e4" />

    <TextView
        android:id="@+id/dialog_signip_yes"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/dialog_signup_ok"
        android:clickable="true"
        android:gravity="center"
        android:text="@string/button_ok"
        android:textColor="@color/text_color"
        android:textSize="16sp" />

</LinearLayout>
