<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical"
    android:fitsSystemWindows="true">


        <RelativeLayout
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="38dp">

            <ImageView
                android:id="@+id/tb_back"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:padding="12dp"
                android:src="@drawable/ab_goback_gray" />

            <TextView
                android:id="@+id/tb_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center_vertical"
                android:text="本地视频"
                android:textColor="#dd333333"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tb_import"
                android:layout_width="50dp"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:background="@drawable/ab_edit_videomanager"
                android:clickable="true"
                android:gravity="center"
                android:text="@string/videomanager_import"
                android:textColor="#5e5e5e"
                android:textSize="13sp"
                android:visibility="visible"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#a7dfbab8" />

        <include
            layout="@layout/activity_videochoose_content" />



    <TextView
        android:id="@+id/videochoose_empty"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#f5f5f5"
        android:gravity="center"
        android:text="您还没有录制视频"
        android:textColor="#969696"
        android:textSize="14sp"
        android:visibility="gone"/>

</LinearLayout>