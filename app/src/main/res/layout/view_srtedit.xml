<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/kaka_43">

        <EditText
            android:id="@+id/srtedit_edit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/kaka_23"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/kaka_10"
            android:layout_marginBottom="@dimen/kaka_10"
            android:layout_marginLeft="@dimen/kaka_16"
            android:layout_marginRight="@dimen/kaka_16"
            android:background="@drawable/srtedit_edit_bg"
            android:gravity="center"
            android:singleLine="true"

            android:hint="@string/videoeditor_hint_edit"
            android:text=""
            android:textColor="#ff9900"
            android:textColorHint="#88ffffff"
            android:textCursorDrawable="@null"
            android:textSize="12sp"/>

        <!--13-->

        <ImageView
            android:id="@+id/srtedit_delete"
            android:layout_width="@dimen/kaka_20"
            android:layout_height="@dimen/kaka_20"
            android:padding="@dimen/kaka_3.5"
            android:scaleType="fitXY"
            android:src="@drawable/videoeditor_delete"

            android:layout_alignRight="@+id/srtedit_edit"
            android:layout_alignTop="@+id/srtedit_edit"
            android:layout_marginTop="-10dp"
            android:layout_marginRight="-10dp"/>
    </RelativeLayout>

</FrameLayout>