<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/ab_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/MyTheme.AppBarOverlay"
        android:visibility="visible"
        app:elevation="2dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:popupTheme="@style/MyTheme.PopupOverlay">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:background="#ffffff"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/goback"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:padding="12dp"
                    android:src="@drawable/ab_goback_gray" />

                <TextView
                    android:id="@+id/tb_title"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="38dp"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="图文攻略"
                    android:textColor="#dd333333"
                    android:textSize="16sp" />
            </LinearLayout>
            <ViewStub
                android:id="@+id/vs_share"
                android:inflatedId="@layout/view_share_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:layout_gravity="center_vertical|end"
                android:layout="@layout/view_share_icon"/>
        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#d4ded1d0" />

    </android.support.design.widget.AppBarLayout>

    <WebView
        android:id="@+id/swi_web_webview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fadeScrollbars="false"
        android:scrollbars="none"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <ViewStub
        android:id="@+id/vs_download"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:elevation="5dp"
        android:layout="@layout/view_bottom_download"/>

    <ProgressBar
        android:id="@+id/webjs_waiting"
        style="@android:style/Theme.DeviceDefault.Dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:background="@null"
        android:visibility="gone" />

</LinearLayout>