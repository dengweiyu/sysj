<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="9dp"
        android:background="@drawable/button_main"
        android:clickable="true">

        <!-- 292/94 -->

        <ImageView
            android:id="@+id/match_pic"
            android:layout_width="match_parent"
            android:layout_height="94dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="9dp"
            android:layout_marginTop="9dp"
            android:scaleType="centerCrop"
            android:src="#555555"/>

        <TextView
            android:id="@+id/activity_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/match_pic"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text=""
            android:hint="@string/loading_text"
            android:textColor="#888888"
            android:textSize="12sp"/>

        <!-- #eea9a9a9 #5dc9ff -->

        <TextView
            android:id="@+id/activity_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/activity_title"
            android:layout_marginBottom="9dp"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="起止时间：2015/12/04-2015/12/16"
            android:textColor="#eea9a9a9"
            android:textSize="11sp"/>

        <!-- #ffb535 黄色 -->
        <!-- #a9a9a9 灰色 -->
        <!-- #ff5f5d 红色 -->

        <TextView
            android:id="@+id/activity_joined"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/activity_time"
            android:layout_alignBottom="@+id/activity_time"
            android:layout_alignParentRight="true"
            android:layout_alignRight="@+id/activity_title"
            android:layout_marginBottom="9dp"
            android:layout_marginRight="9dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text=""
            android:textColor="#a9a9a9"
            android:textSize="11sp"/>

        <ImageView
            android:id="@+id/activity_bg"
            android:layout_width="36dp"
            android:layout_height="21dp"
            android:layout_alignRight="@+id/match_pic"
            android:layout_alignTop="@+id/match_pic"
            android:layout_marginRight="-4dp"
            android:layout_marginTop="4dp"
            android:scaleType="fitXY"
            android:src="@null"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignLeft="@+id/button"
        android:layout_alignRight="@+id/button"
        android:layout_below="@+id/button"
        android:layout_marginLeft="1px"
        android:background="#e5e5e5"/>

</RelativeLayout>