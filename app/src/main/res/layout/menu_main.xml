<?xml version="1.0" encoding="utf-8"?>


    <LinearLayout
        android:layout_toLeftOf="@+id/iv_buttom_record"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="horizontal">
    <LinearLayout
        android:id="@+id/bottom_first"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@drawable/background_press"
        android:padding="2dp"
        android:visibility="visible">
        <ImageView
            android:id="@+id/bottom_first_icon"
            android:layout_width="@dimen/menu_main_icon"
            android:layout_height="@dimen/menu_main_icon"
            android:scaleType="fitCenter"
            android:src="@drawable/home_selected" />

        <TextView
            android:id="@+id/bottom_first_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/menu_main_padding"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/menu_main_first"
            android:textColor="@color/menu_main_red"
            android:textSize="9sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_second"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@drawable/background_press"
        android:padding="2dp"
        android:visibility="visible">

        <ImageView
            android:id="@+id/bottom_second_icon"
            android:layout_width="@dimen/menu_main_icon"
            android:layout_height="@dimen/menu_main_icon"
            android:scaleType="fitCenter"
            android:src="@drawable/game_normal" />

        <TextView
            android:id="@+id/bottom_second_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/menu_main_padding"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/menu_main_second"
            android:textColor="@color/menu_main_gray"
            android:textSize="9sp" />
    </LinearLayout>
    <View
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:visibility="invisible"></View>
    <LinearLayout
        android:id="@+id/bottom_third"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@drawable/background_press"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="2dp"

        android:visibility="visible">

        <ImageView
            android:id="@+id/bottom_third_icon"
            android:layout_width="@dimen/menu_main_icon"
            android:layout_height="@dimen/menu_main_icon"
            android:scaleType="fitCenter"
            android:src="@drawable/discover_normal" />

        <TextView
            android:id="@+id/bottom_third_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/menu_main_padding"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/menu_main_third"
            android:textColor="@color/menu_main_gray"
            android:textSize="9sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_fourth"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@drawable/background_press"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="2dp"
        android:visibility="visible">

        <ImageView
            android:id="@+id/bottom_fourth_icon"
            android:layout_width="@dimen/menu_main_icon"
            android:layout_height="@dimen/menu_main_icon"
            android:scaleType="fitCenter"
            android:src="@drawable/event_nomal" />


       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="@dimen/menu_main_padding"
           android:orientation="horizontal">
           <TextView
               android:id="@+id/tv_bottom_play_with"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"

               android:gravity="center"
               android:singleLine="true"
               android:text="陪练"
               android:textColor="@color/menu_main_gray"
               android:textSize="9sp" />
           <View
               android:id="@+id/v_divider_bottom"
               android:layout_width="1dp"
               android:layout_height="match_parent"
               android:layout_marginTop="2dp"
               android:layout_marginBottom="2dp"
               android:layout_gravity="center"
               android:layout_marginLeft="4dp"
               android:layout_marginEnd="4dp"
               android:background="@color/menu_main_gray"></View>
        <TextView
            android:id="@+id/bottom_fourth_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:singleLine="true"
            android:text="@string/menu_main_fourth"
            android:textColor="@color/menu_main_gray"
            android:textSize="9sp" />
       </LinearLayout>
    </LinearLayout>
</LinearLayout>