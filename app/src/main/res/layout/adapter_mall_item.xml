<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mall_item_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/button_white"
    android:orientation="horizontal"
    android:clickable="true"
    android:padding="8dp">

    <com.li.videoapplication.views.RoundedImageView
        android:id="@+id/mall_item_pic"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="2dp"
        android:src="#cacaca"
        app:riv_border_color="#ffffff"
        app:riv_border_width="0dp"
        app:riv_corner_radius="3dp"
        app:riv_oval="false" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/mall_item_name"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text=""
            android:hint="@string/loading_text"
            android:textColor="@color/text_color"
            android:textSize="15sp"
            android:layout_marginTop="2dp"/>

        <TextView
            android:id="@+id/mall_item_description"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="付费申请首页推荐"
            android:textColor="@color/textcolor_french_gray"
            android:textSize="13sp"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/mall_item_beanview"
            android:layout_width="120dp"
            android:orientation="horizontal"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:visibility="visible">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/slider_bean" />

            <TextView
                android:id="@+id/mall_item_beannum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="150000"
                android:layout_marginLeft="6dp"
                android:textColor="@color/currency_modou_gold"
                android:textSize="12sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="剩余："
                android:textColor="@color/textcolor_french_gray"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/mall_item_overplus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8"
                android:textColor="@color/menu_main_red"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/mall_item_exchange"
        android:layout_width="46dp"
        android:layout_height="24dp"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="2dp"
        android:background="@drawable/mywallet_currencyrecord_red"
        android:gravity="center"
        android:text="兑换"
        android:textColor="@color/white"
        android:textSize="13sp" />

</LinearLayout>