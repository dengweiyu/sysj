<?xml version="1.0" encoding="utf-8"?>
<com.li.videoapplication.views.MyLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/slider_bg"
    android:orientation="vertical"
    tools:ignore="DuplicateIds,HardcodedText">

    <RelativeLayout
        android:id="@+id/slider_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center_horizontal"
        android:paddingLeft="22dp"
        android:paddingRight="20dp"
        android:visibility="visible">

        <!-- 48 -->

        <ImageView
            android:id="@+id/slider_phone"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:clickable="true"
            android:scaleType="fitXY"
            android:src="@drawable/login_phone" />

        <ImageView
            android:id="@+id/slider_qq"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_alignTop="@+id/slider_phone"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/slider_phone"
            android:clickable="true"
            android:scaleType="fitXY"
            android:src="@drawable/login_qq" />

        <ImageView
            android:id="@+id/slider_wx"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_alignTop="@+id/slider_qq"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/slider_qq"
            android:clickable="true"
            android:scaleType="fitXY"
            android:src="@drawable/login_wx" />

        <ImageView
            android:id="@+id/slider_wb"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_alignTop="@+id/slider_wx"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/slider_wx"
            android:clickable="true"
            android:scaleType="fitXY"
            android:src="@drawable/login_wb" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/slider_phone"
            android:layout_alignRight="@+id/slider_wb"
            android:layout_below="@+id/slider_phone"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="请选择以上登录方式"
            android:textColor="#f0f0f0"
            android:textSize="11sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/slider_person"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_marginBottom="22dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/slider_btn"
        android:paddingLeft="20dp"
        android:paddingRight="5dp"
        android:visibility="visible">

        <!--22/20-->
        <com.li.videoapplication.views.CircleImageView
            android:id="@+id/slider_head"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="#00ffffff" />

        <ImageView
            android:id="@+id/slider_isv"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignEnd="@+id/slider_head"
            android:layout_alignBottom="@+id/slider_head"
            android:src="@drawable/home_v_red"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/iv_slider_vip"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignEnd="@+id/slider_head"
            android:layout_alignBottom="@+id/slider_head"
            android:src="@drawable/vip_level_1_icon"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/slider_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/slider_head"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/slider_head"
            android:ellipsize="end"
            android:maxWidth="120dp"
            android:maxLines="1"
            android:text=""
            android:textColor="#ffffff"
            android:textSize="11sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_alignLeft="@+id/slider_name"
            android:layout_toLeftOf="@+id/go"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_slider_coin"
                    android:layout_width="11dp"
                    android:layout_height="11dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginRight="6dp"
                    android:src="@drawable/currency" />
                <TextView
                    android:id="@+id/tv_slider_coin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_gravity="center_horizontal"
                    android:textColor="#f7b500"
                    android:maxEms="5"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textSize="10sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/slider_bean"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginTop="1dp"
                    android:src="@drawable/slider_bean" />

                <TextView
                    android:id="@+id/slider_bean_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:maxLines="1"
                    android:maxEms="5"
                    android:ellipsize="end"
                    android:textSize="10sp"
                    android:layout_marginLeft="6dp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/currency_modou_gold"/>
            </LinearLayout>
        </LinearLayout>


        <View
            android:id="@+id/divider"
            android:layout_width="1px"
            android:layout_height="10dp"
            android:layout_alignTop="@+id/slider_focus"

            android:layout_marginTop="3dp"
            android:layout_toRightOf="@+id/slider_focus"
            android:background="#bbbcbd" />

        <TextView
            android:id="@+id/slider_focus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/slider_head"
            android:layout_alignLeft="@+id/slider_name"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:paddingRight="9dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="dsa"
            android:textColor="#bbbcbd"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/slider_fans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/slider_focus"
            android:layout_toRightOf="@+id/divider"
            android:paddingLeft="9dp"
            android:paddingTop="2dp"
            android:paddingRight="4dp"
            android:paddingBottom="2dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="asdasd"
            android:textColor="#bbbcbd"
            android:textSize="10sp" />

        <!--10/16-->
        <ImageView
            android:id="@+id/go"
            android:layout_width="50dp"
            android:layout_height="56dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingBottom="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="20dp"
            android:scaleType="fitCenter"
            android:src="@drawable/slider_go" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/slider_myvideo"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/slider_btn"
        android:layout_marginTop="22dp"
        android:paddingLeft="28dp"
        android:paddingRight="25dp">

        <ImageView
            android:id="@+id/left"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"
            android:src="@drawable/slider_myvideo"
            tools:ignore="DuplicateIds" />

        <TextView
            android:id="@+id/mid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/left"
            android:text="@string/slider_myvideo"
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="8dp"
            android:layout_height="14dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"
            android:src="@drawable/slider_go" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/slider_mymatch"
        android:layout_width="match_parent"
        android:layout_height="45dp"

        android:background="@drawable/slider_btn"
        android:paddingLeft="28dp"
        android:paddingRight="25dp">

        <ImageView
            android:id="@+id/left"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"
            android:src="@drawable/slider_mymatch" />

        <TextView
            android:id="@+id/mid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/left"
            android:text="陪练 | 赛事"
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="8dp"
            android:layout_height="14dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"
            android:src="@drawable/slider_go" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/slider_mymessage"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/slider_btn"
        android:paddingLeft="28dp"
        android:paddingRight="25dp">

        <ImageView
            android:id="@+id/left"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"
            android:src="@drawable/slider_mymessage" />

        <TextView
            android:id="@+id/mid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/left"
            android:text="消息"
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/slider_message_go"
            android:layout_width="8dp"
            android:layout_height="14dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"
            android:src="@drawable/slider_go" />


        <TextView
            android:id="@+id/slider_mymessage_count"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/count_point"
            android:gravity="center"
            android:text=""
            android:textColor="#ffffff"
            android:textSize="8sp"
            android:visibility="visible"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/slider_mywallet"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/slider_btn"
        android:paddingLeft="28dp"
        android:paddingRight="25dp">

        <ImageView
            android:id="@+id/left"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"
            android:src="@drawable/slider_mywallet" />

        <TextView
            android:id="@+id/mid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/left"
            android:text="钱包"
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/slider_message_go"
            android:layout_width="8dp"
            android:layout_height="14dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"
            android:src="@drawable/slider_go" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/slider_sjmall"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/slider_btn"
        android:paddingLeft="28dp"
        android:paddingRight="25dp">

        <ImageView
            android:id="@+id/left"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"
            android:src="@drawable/slider_sjmall" />

        <TextView
            android:id="@+id/mid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/left"
            android:text="商城"
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/slider_message_go"
            android:layout_width="8dp"
            android:layout_height="14dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"
            android:src="@drawable/slider_go" />
    </RelativeLayout>




    <RelativeLayout
        android:id="@+id/slider_collection"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/slider_btn"
        android:paddingLeft="28dp"
        android:paddingRight="25dp">

        <ImageView
            android:id="@+id/left"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"
            android:src="@drawable/slider_mycollection" />

        <TextView
            android:id="@+id/mid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/left"
            android:text="收藏"
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="8dp"
            android:layout_height="14dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"
            android:src="@drawable/slider_go" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginBottom="28dp"
        android:paddingLeft="28dp"
        android:paddingRight="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@drawable/slider_btn"
            android:id="@+id/ll_slider_vip">
            <ImageView
                android:layout_width="22dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:padding="4dp"
                android:scaleType="fitCenter"
                android:src="@drawable/vip_left_white" />

            <TextView
                android:id="@+id/mid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/left"
                android:text="VIP"
                android:textColor="#ffffff"
                android:layout_gravity="center"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal"
            android:background="@drawable/slider_btn"
            android:id="@+id/slider_setting">
        <ImageView
            android:id="@+id/left"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:padding="4dp"
            android:scaleType="fitCenter"
            android:src="@drawable/slider_setup" />

        <TextView
            android:id="@+id/mid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/left"
            android:text="@string/slider_setup"
            android:textColor="#ffffff"
            android:layout_gravity="center"
            android:textSize="14sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/slider_customer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/slider_btn"

            android:layout_marginLeft="10dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:padding="2dp"
                android:scaleType="fitCenter"
                android:src="@drawable/customer_service_gray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:text="@string/slider_customer"
                android:textColor="#ffffff"
                android:textSize="14sp" />
        </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</com.li.videoapplication.views.MyLinearLayout>