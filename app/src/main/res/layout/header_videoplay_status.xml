<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/rl_video_play_status"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="#ffffff"
    android:clipChildren="false"
    android:clipToPadding="false"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:layout_alignParentTop="true"
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e2e2e2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="horizontal"
        android:layout_centerVertical="true"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/left"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:src="@drawable/videoplay_playtime"/>

        <!--2.1万次播放-->

        <TextView
            android:id="@+id/videoplay_playCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="7dp"
            android:singleLine="true"
            android:text=""
            android:textColor="#bb565656"
            android:textSize="12sp"/>

        <com.li.videoapplication.views.sparkbutton.SparkButton
            android:id="@+id/videoplay_good"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:paddingBottom="2dp"
            android:layout_gravity="center_vertical"
            app:sparkbutton_activeImage="@drawable/videoplay_good_red_205"
            app:sparkbutton_inActiveImage="@drawable/videoplay_good_gray_205"
            app:sparkbutton_iconSize="15.4dp"
            app:sparkbutton_primaryColor="@color/heart_primary_color"
            app:sparkbutton_secondaryColor="@color/heart_secondary_color" />

        <!--<ImageView-->
        <!--android:id="@+id/videoplay_good"-->
        <!--android:layout_width="15dp"-->
        <!--android:layout_height="17dp"-->
        <!--android:paddingBottom="2dp"-->
        <!--android:layout_centerVertical="true"-->
        <!--android:layout_marginRight="7dp"-->
        <!--android:src="@drawable/videoplay_good_gray_205"-->
        <!--android:scaleType="fitXY"-->
        <!--android:button="@null"-->
        <!--android:checked="false"/>-->

        <TextView
            android:id="@+id/videoplay_goodCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:text=""
            android:textColor="#bb565656"
            android:textSize="12sp"/>

        <com.li.videoapplication.views.sparkbutton.SparkButton
            android:id="@+id/videoplay_bad"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:paddingTop="2dp"
            app:sparkbutton_activeImage="@drawable/videoplay_bad_blue_205"
            app:sparkbutton_inActiveImage="@drawable/videoplay_bad_gray_205"
            app:sparkbutton_iconSize="15.4dp"
            app:sparkbutton_primaryColor="@color/bad_primary_color"
            app:sparkbutton_secondaryColor="@color/bad_secondary_color"/>

        <TextView
            android:id="@+id/videoplay_badCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:text=""
            android:textColor="#bb565656"
            android:textSize="12sp"/>

        <com.li.videoapplication.views.sparkbutton.SparkButton
            android:id="@+id/videoplay_star"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:sparkbutton_activeImage="@drawable/videoplay_star_red_205"
            app:sparkbutton_inActiveImage="@drawable/videoplay_star_gray_205"
            app:sparkbutton_iconSize="15.5dp"
            app:sparkbutton_primaryColor="@color/heart_primary_color"
            app:sparkbutton_secondaryColor="@color/heart_secondary_color" />

        <TextView
            android:id="@+id/videoplay_starCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="21dp"
            android:singleLine="true"
            android:text=""
            android:textColor="#555555"
            android:textSize="12sp"/>

    </LinearLayout>
</RelativeLayout>

