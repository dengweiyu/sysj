<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3f3f3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/matchlist_fliterview"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginEnd="9dp"
            android:layout_marginStart="9dp"
            android:layout_marginTop="9dp"
            android:background="@drawable/shadow_bg"
            android:gravity="center_vertical"
            android:paddingEnd="9dp"
            android:paddingStart="9dp">

            <TextView
                android:id="@+id/matchlist_topbar_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="默认："
                android:textColor="@color/textcolor_gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/matchlist_topbar_mid"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/textcolor_gray"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/matchlist_topbar_right"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:padding="11dp"
                android:src="@drawable/matchfliter_normal" />

        </LinearLayout>

        <include layout="@layout/refresh_recyclerview" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/match_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</RelativeLayout>



