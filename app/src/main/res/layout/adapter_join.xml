<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_white"
                tools:ignore="RtlSymmetry,HardcodedText,RtlHardcoded">

    <RelativeLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/imageshare_type_btn"
        android:gravity="center_vertical"
        android:paddingRight="15dp">

        <TextView
            android:id="@+id/join_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="12dp"
            android:layout_toLeftOf="@+id/join_check"
            android:singleLine="true"
            android:text="活动"
            android:textColor="#88333333"
            android:textSize="12sp"/>

        <CheckBox
            android:id="@+id/join_check"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/join_check"
            android:button="@null"
            android:checked="true"
            android:gravity="center_vertical"/>
    </RelativeLayout>

</RelativeLayout>