<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="58dp"
                android:background="@drawable/button_white"
                android:descendantFocusability="blocksDescendants">

    <ImageView
        android:id="@+id/message_pic"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:src="@drawable/message_game"/>

    <TextView
        android:id="@+id/message_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@+id/message_pic"
        android:text="@string/message_video"
        android:textColor="#e0333333"
        android:textSize="14sp"/>

    <ImageView
        android:id="@+id/message_go"
        android:layout_width="6dp"
        android:layout_height="10dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="14dp"
        android:scaleType="fitXY"
        android:src="@drawable/go_message"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/message_count"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="13dp"
        android:background="@drawable/count_point"
        android:gravity="center"
        android:text="9"
        android:textColor="#ffffff"
        android:textSize="8sp"
        android:visibility="visible"/>

</RelativeLayout>