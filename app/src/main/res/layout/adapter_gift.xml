<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="62dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_main_round"
            android:clickable="true"
            android:orientation="vertical"
            android:paddingLeft="9dp"
            android:paddingRight="10dp">

            <com.li.videoapplication.views.RoundedImageView
                android:id="@+id/gift_pic"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:layout_centerVertical="true"
                android:scaleType="centerCrop"
                android:src="#555555"
                app:riv_border_color="#ffffff"
                app:riv_border_width="0dp"
                app:riv_corner_radius="6dp"
                app:riv_oval="false"/>

            <TextView
                android:id="@+id/gift_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/gift_pic"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/gift_pic"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="三国杀"
                android:textColor="#545454"
                android:textSize="12sp"/>

            <!-- #ff5b4f -->

            <TextView
                android:id="@+id/gift_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/gift_title"
                android:layout_below="@+id/gift_title"
                android:layout_marginTop="2dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="剩余数量：75%"
                android:textColor="#868686"
                android:textSize="10sp"/>

            <TextView
                android:id="@+id/gift_obj"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/gift_count"
                android:layout_below="@+id/gift_count"
                android:layout_marginBottom="-2dp"
                android:layout_marginTop="2dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="发过节费看看发过节费看看发过节费看看发过节费看看"
                android:textColor="#868686"
                android:textSize="10sp"/>
        </RelativeLayout>

        <ImageView
            android:id="@+id/gift_status"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_marginRight="0dp"
            android:clickable="true"
            android:scaleType="centerCrop"
            android:src="#00555555"/>
    </LinearLayout>

</FrameLayout>