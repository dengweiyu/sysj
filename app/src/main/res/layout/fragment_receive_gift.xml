<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:background="@color/white">
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/activity_main_bg"></View>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_subtitle_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="全部"
                    android:textSize="14sp"
                    android:textColor="@color/currency_red"
                    android:padding="10dp"/>
                <TextView
                    android:id="@+id/tv_subtitle_coin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="魔币礼物"
                    android:textColor="@color/activity_gray"
                    android:textSize="14sp"
                    android:padding="10dp"/>
                <TextView
                    android:id="@+id/tv_subtitle_beans"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="魔豆礼物"
                    android:textSize="14sp"
                    android:textColor="@color/activity_gray"
                    android:padding="10dp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/activity_main_bg"></View>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_my_bill_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
        <LinearLayout
            android:id="@+id/ll_no_gift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone"
            android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_no_gift"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/no_receive_gift"/>
                <TextView
                    android:id="@+id/tv_no_gift"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical"
                    android:text="@string/no_receive_gift_description"/>
        </LinearLayout>
        </RelativeLayout>
</LinearLayout>