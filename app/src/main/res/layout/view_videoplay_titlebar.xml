<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#88000000"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/titlebar_goback"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginLeft="4dp"
        android:padding="9dp"
        android:src="@drawable/ab_goback_white"/>

    <TextView
        android:id="@+id/titlebar_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="4dp"
        android:lines="1"
        android:ellipsize="end"
        android:text=""
        android:textColor="#ffffff"
        android:textSize="13sp"/>

    <ImageView
        android:visibility="gone"
        android:id="@+id/titlebar_tv"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="14dp"
        android:padding="4dp"
        android:src="@drawable/videoplay_tv_208"/>

    <!--16-->
    <ImageView
        android:id="@+id/titlebar_share"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginRight="12dp"
        android:padding="7dp"
        android:src="@drawable/videoplay_share_208"/>

    <ImageView
        android:visibility="gone"
        android:id="@+id/titlebar_setting"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginRight="12dp"
        android:padding="5dp"
        android:src="@drawable/videoplay_setting_208"/>
</LinearLayout>
