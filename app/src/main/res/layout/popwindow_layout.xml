<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white" >

    <RelativeLayout
        android:id="@+id/listview_head_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_title_height"
        android:minHeight="@dimen/activity_title_height" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/device_choose_title"
            android:textColor="@android:color/black"
            android:textSize="@dimen/activity_title_size_16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_horizontal_margin_0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/divider_bg" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_title_height_100dp"
        android:layout_alignParentBottom="true" >

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_horizontal_margin_0.5dp"
            android:background="@color/divider_bg" />

        <LinearLayout
            android:id="@+id/down_hpplay_app"
            android:layout_width="@dimen/layout_title_height_200dp"
            android:layout_height="@dimen/layout_title_height_46dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:background="@drawable/custom_radius_button_selector"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="@dimen/activity_title_width"
                android:layout_height="@dimen/activity_title_width"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/activity_title_width"
                android:src="@drawable/download_icon" />

            <TextView
                android:id="@+id/textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/layout_title_height_5dp"
                android:text="@string/down_happly_tv"
                android:textColor="@android:color/white"
                android:textSize="@dimen/activity_title_size_15sp" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/down_progresbar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="@dimen/layout_title_height_250dp"
            android:layout_height="@dimen/layout_title_height_10dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/layout_title_height_55dp"
            android:progressDrawable="@drawable/custom_seekbar_horizontal"
            android:visibility="gone" />

        <TextView
            android:id="@+id/button_layout_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/layout_title_height_76dp"
            android:text="@string/tv_telecontrol_tx"
            android:textColor="#5F000000"
            android:textSize="@dimen/activity_title_size_12sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/seaching_device_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_layout"
        android:layout_below="@id/listview_head_layout"
        android:layout_centerHorizontal="true"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminateBehavior="repeat"
                android:src="@drawable/progressbg" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/search_device_happly_tv"
                android:textColor="@color/aplha_back_50"
                android:textSize="@dimen/activity_title_size_16sp" />
        </LinearLayout>
    </RelativeLayout>

    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_layout"
        android:layout_below="@id/listview_head_layout"
        android:layout_centerHorizontal="true"
        android:divider="@null"
        android:scrollbars="none"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/not_find_device_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_layout"
        android:layout_below="@id/listview_head_layout"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:visibility="gone" >

        <ImageView
            android:layout_width="@dimen/layout_title_height_206dp"
            android:layout_height="@dimen/layout_title_height_102dp"
            android:layout_centerInParent="true"
            android:src="@drawable/not_find_device" />
    </RelativeLayout>

</RelativeLayout>