<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rv_coach_info_header"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:paddingLeft="16dp"
    android:paddingRight="20dp">
    <com.li.videoapplication.views.CircleImageView
        android:id="@+id/civ_coach_detail_icon"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:scaleType="centerCrop"
        app:border_color="#DCDCDC"
        app:border_width="1px"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/tv_coach_detail_nick_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="14sp"
        android:textColor="@color/text_color"
        android:text="霸道总裁"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/civ_coach_detail_icon"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/tv_coach_detail_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tv_coach_detail_nick_name"
        android:layout_marginLeft="10dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="12sp"
        android:layout_alignBottom="@+id/tv_coach_detail_nick_name"
        android:textColor="@color/textcolor_french_gray"
        android:text="4.0分"/>
    <LinearLayout
        android:id="@+id/ll_coach_score"
        android:layout_toRightOf="@+id/civ_coach_detail_icon"
        android:orientation="vertical"
        android:layout_alignLeft="@+id/tv_coach_detail_nick_name"
        android:layout_alignBottom="@+id/civ_coach_detail_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--   style="?android:attr/ratingBarStyleIndicator"-->
        <RatingBar
            android:id="@+id/rb_coach_detail_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/ScoreStar"
            android:numStars="5"
            android:rating="4"/>

        <TextView
            android:id="@+id/tv_place_order_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/textcolor_french_gray"
            android:visibility="gone"
            android:text="下单数：52"/>

        <LinearLayout
            android:id="@+id/ll_coach_info_header_game_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:layout_toRightOf="@+id/civ_coach_detail_icon"
            android:layout_alignBottom="@+id/civ_coach_detail_icon"
            android:layout_alignLeft="@+id/tv_coach_detail_nick_name">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/text_color"
                android:text="陪练游戏："/>
            <TextView
                android:id="@+id/tv_coach_game_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/textcolor_french_gray"
                android:text="王者荣耀"/>
        </LinearLayout>
    </LinearLayout>


    <ImageView
        android:id="@+id/iv_coach_info_go"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:src="@drawable/go_discover"/>
</RelativeLayout>