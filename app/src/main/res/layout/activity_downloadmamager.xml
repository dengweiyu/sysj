<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/keyword_text_gray"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white">

        <include layout="@layout/toolbar_white" />

    </android.support.v7.widget.Toolbar>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#eaeaea"
        tools:ignore="PxUsage" />

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/kaka_9">

            <!--广告游戏-->
            <android.support.v7.widget.RecyclerView
                android:id="@+id/firstRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/kaka_9"
                android:layout_marginRight="@dimen/kaka_9"
                android:layout_marginTop="@dimen/kaka_9"
                android:background="@drawable/stroke_gray_2px"
                android:overScrollMode="never"
                android:scrollbars="none"
                android:visibility="gone" />

            <!--飞磨应用-->
            <LinearLayout
                android:id="@+id/secondContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/kaka_9"
                android:layout_marginRight="@dimen/kaka_9"
                android:layout_marginTop="@dimen/kaka_9"
                android:background="@drawable/stroke_gray_2px"
                android:orientation="vertical"
                android:padding="1px"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/kaka_12"
                    android:layout_marginLeft="@dimen/kaka_12"
                    android:layout_marginRight="@dimen/kaka_12"
                    android:layout_marginTop="@dimen/kaka_12"
                    android:text="@string/applicationdownload_morefun"
                    android:textColor="#aa565656"
                    android:textSize="12sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#dbdbdb" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/secondRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/kaka_9"
                    android:layout_marginRight="@dimen/kaka_9"
                    android:layout_marginTop="@dimen/kaka_9"
                    android:overScrollMode="never"
                    android:scrollbars="none"
                    android:visibility="visible" />

            </LinearLayout>
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>