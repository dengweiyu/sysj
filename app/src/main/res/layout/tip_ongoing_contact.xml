<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:ignore="DuplicateIds,NestedWeights,ContentDescription">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/tip_top"
            android:layout_width="match_parent"
            android:layout_height="306dp"
            android:src="@color/tip_bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/tip_left"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:src="@color/tip_bg" />

            <com.li.videoapplication.views.TipView2
                android:layout_width="100dp"
                android:layout_height="30dp" />

            <ImageView
                android:id="@+id/tip_right"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:src="@color/tip_bg" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="92dp"
            android:gravity="center_horizontal"
            android:background="@color/tip_bg"
            android:visibility="visible">

            <ImageView
                android:id="@+id/tip_text"
                android:layout_width="match_parent"
                android:layout_height="92dp"
                android:layout_centerHorizontal="true"
                android:scaleType="centerInside"
                android:src="@drawable/tip_ongoing_contact" />

        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@color/tip_bg" />
    </LinearLayout>
</RelativeLayout>