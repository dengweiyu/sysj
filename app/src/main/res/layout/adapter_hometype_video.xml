<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginTop="8dp"
    android:descendantFocusability="afterDescendants"
    android:orientation="vertical">

    <!--猜你喜欢-->
    <LinearLayout
        android:id="@+id/hometype_guess"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:paddingLeft="9dp"
        android:paddingRight="9dp"
        android:paddingTop="8dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="20dp"
            android:padding="1dp"
            android:scaleType="fitCenter"
            android:src="@drawable/home_likely" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:text="@string/home_youlike"
            android:textColor="#e0333333"
            android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/hometype_youlike_change"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingRight="4dp">

            <ImageView
                android:id="@+id/youlike_change_icon"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:scaleType="fitCenter"
                android:src="@drawable/home_change" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="@string/home_switch"
                android:layout_gravity="center_vertical"
                android:textColor="@drawable/home_change_text"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>

    <!--视界原创-->
    <LinearLayout
        android:id="@+id/hometype_sysj"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:paddingLeft="9dp"
        android:paddingRight="9dp"
        android:paddingTop="8dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="11dp"
            android:layout_height="20dp"
            android:scaleType="fitCenter"
            android:src="@drawable/home_sysj" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:text="视界原创"
            android:textColor="#e0333333"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更多"
            android:textColor="#6e6e6e"
            android:textSize="10sp"
            android:layout_marginEnd="6dp"/>

        <ImageView
            android:layout_width="11dp"
            android:layout_height="11dp"
            android:src="@drawable/go_home_217" />
    </LinearLayout>

    <!--其他游戏视频-->
    <LinearLayout
        android:id="@+id/hometype_game"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:paddingLeft="9dp"
        android:paddingRight="9dp"
        android:paddingTop="8dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/hoemtype_game_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/signup_rec_red"
            android:drawablePadding="12dp"
            android:text=""
            android:textColor="#e0333333"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更多"
            android:textColor="#6e6e6e"
            android:textSize="10sp"
            android:layout_marginEnd="6dp"/>

        <ImageView
            android:layout_width="11dp"
            android:layout_height="11dp"
            android:src="@drawable/go_home_217" />
    </LinearLayout>

    <com.li.videoapplication.views.GridViewY1
        android:id="@+id/hometype_gridview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00ffffff"
        android:cacheColorHint="#00ffffff"
        android:horizontalSpacing="7dp"
        android:listSelector="#00ffffff"
        android:numColumns="2"
        android:paddingLeft="9dp"
        android:paddingRight="9dp"
        android:scrollbars="none"
        android:stretchMode="columnWidth"
        android:verticalSpacing="4dp"
        android:visibility="visible" />

</LinearLayout>