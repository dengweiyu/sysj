<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/button_main"
              android:descendantFocusability="afterDescendants"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:paddingLeft="9dp"
        android:paddingRight="9dp"
        android:paddingTop="8dp">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="20dp"
            android:padding="1dp"
            android:scaleType="fitCenter"
            android:src="@drawable/home_likely"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:text="@string/home_youlike"
            android:textColor="#e0333333"
            android:textSize="12sp"/>

        <LinearLayout
            android:id="@+id/youlike_change"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="4dp">

            <ImageView
                android:id="@+id/youlike_change_icon"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:scaleType="fitCenter"
                android:src="@drawable/home_change"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="@string/home_switch"
                android:textColor="@drawable/home_change_text"
                android:textSize="10sp"/>
        </LinearLayout>
    </LinearLayout>

    <com.li.videoapplication.views.GridViewY1
        android:id="@+id/gridview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00ffffff"
        android:cacheColorHint="#00ffffff"
        android:horizontalSpacing="7dp"
        android:listSelector="#00ffffff"
        android:numColumns="2"
        android:paddingLeft="9dp"
        android:paddingRight="9dp"
        android:scrollbars="none"
        android:stretchMode="columnWidth"
        android:verticalSpacing="4dp"
        android:visibility="visible"/>

</LinearLayout>