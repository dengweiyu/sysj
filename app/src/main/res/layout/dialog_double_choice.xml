<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/ll_double_choice_root"
              android:background="@color/white">
    <include
        layout="@layout/layout_choice"></include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/nsv_choice_root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.li.videoapplication.ui.view.WheelRecyclerView
                    android:id="@+id/wrv_hour"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
            android:layout_weight="1"></com.li.videoapplication.ui.view.WheelRecyclerView>

        <com.li.videoapplication.ui.view.WheelRecyclerView
            android:id="@+id/wrv_minute"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"></com.li.videoapplication.ui.view.WheelRecyclerView>

    </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
        <View
            android:id="@+id/v_divider_top"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/lightgrey"></View>

        <View
            android:id="@+id/v_divider_bottom"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/lightgrey"></View>
        <TextView
            android:id="@+id/tv_divide_char"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:text=":"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</LinearLayout>