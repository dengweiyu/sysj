<FrameLayout android:id="@+id/root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="0.6">

    <!--42-->
    <!--30/42-->

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center">

        <ImageView
            android:id="@+id/floatview_icon"
            android:layout_width="@dimen/kaka_26"
            android:layout_height="@dimen/kaka_26"
            android:scaleType="fitCenter"
            android:src="@drawable/floatview_icon"/>

        <com.fmsysj.screeclibinvoke.ui.view.FlickerView2
            android:visibility="visible"
            android:id="@+id/floatview_point"
            android:layout_width="@dimen/kaka_4"
            android:layout_height="@dimen/kaka_4"
            android:layout_alignTop="@+id/floatview_icon"
            android:layout_alignRight="@+id/floatview_icon"
            android:layout_marginTop="@dimen/kaka_8"
            android:layout_marginRight="@dimen/kaka_8"
            android:scaleType="fitCenter"
            android:src="@drawable/floatview_point_bg"/>

        <TextView
            android:visibility="visible"
            android:id="@+id/floatview_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/floatview_icon"
            android:layout_marginTop= "@dimen/kaka_2"
            android:background="@drawable/floatview_text_bg"
            android:paddingLeft="@dimen/kaka_2"
            android:paddingRight="@dimen/kaka_2"
            android:gravity="center"
            android:text="000:00"
            android:textSize="8sp"
            android:textColor="#ffffff"/>
    </RelativeLayout>

</FrameLayout>