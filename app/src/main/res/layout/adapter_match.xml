<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:layout_marginEnd="12dp"
    android:background="@drawable/shadow_bg">

    <LinearLayout
        android:id="@+id/match_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/match_pic"
            android:layout_width="@dimen/kaka_70.4"
            android:layout_height="44dp"
            android:layout_marginTop="12dp"
            android:src="#dadada" />

        <TextView
            android:id="@+id/match_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="2dp"
            android:text="冠军"
            android:textColor="@color/textcolor_gray"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/match_ratio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:paddingEnd="12dp"
            android:paddingStart="12dp"
            android:text="赛事报名签到后即可获得"
            android:textColor="@color/textcolor_french_gray"
            android:textSize="9sp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/match_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="2"
            android:paddingEnd="12dp"
            android:paddingStart="12dp"
            android:text="1000魔豆"
            android:textColor="@color/textcolor_french_gray"
            android:textSize="11sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/match_shadow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#64000000"
        android:gravity="center"
        android:text="已完成"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:visibility="gone" />
</RelativeLayout>
