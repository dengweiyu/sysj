<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="@dimen/kaka_40"
    android:layout_marginRight="@dimen/kaka_40"
    android:background="#ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/update_header"
            android:layout_width="match_parent"
            android:layout_height="@dimen/kaka_92"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/update_header" />

        <TextView
            android:id="@+id/update_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/update_header"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/kaka_10"
            android:layout_marginRight="@dimen/kaka_18"
            android:text="v 2.1.1"
            android:textColor="#ffffff"
            android:textSize="12sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/update_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/kaka_14"
        android:layout_marginLeft="@dimen/kaka_16"
        android:layout_marginRight="@dimen/kaka_16"
        android:layout_marginTop="@dimen/kaka_14"
        android:gravity="left|top"
        android:hint="@string/loading_text"
        android:lineSpacingExtra="3dp"
        android:text=""
        android:textColor="#565656"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/kaka_32"
        android:layout_marginBottom="@dimen/kaka_18"
        android:layout_marginLeft="@dimen/kaka_16"
        android:layout_marginRight="@dimen/kaka_16"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/update_cancel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_selector_gray"
            android:gravity="center"
            android:text="@string/update_cancel"
            android:textColor="#787878"
            android:textSize="14sp" />

        <View
            android:id="@+id/v_divider_mid"
            android:layout_width="@dimen/kaka_16"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/update_now"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_red"
            android:gravity="center"
            android:text="@string/update_now"
            android:textColor="#ffffff"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>