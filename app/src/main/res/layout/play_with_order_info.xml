        <!--android:id="@+id/tv_game_type"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="match_parent"-->
        <!--android:paddingTop="4dp"-->
        <!--android:paddingRight="8dp"-->
        <!--android:paddingBottom="4dp"-->
        <!--android:textSize="12sp"-->
