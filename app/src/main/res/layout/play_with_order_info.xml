<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/ll_game_base_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_game_server"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/textcolor_french_gray"
            android:paddingTop="8dp"
            android:paddingRight="8dp"
            android:paddingBottom="8dp"
            android:text="微信大区"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/lightgrey"></View>
        <TextView
            android:id="@+id/tv_game_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/textcolor_french_gray"
            android:padding="8dp"
            android:text="排位赛"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/lightgrey"></View>

        <TextView
            android:id="@+id/tv_game_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/textcolor_french_gray"
            android:padding="8dp"
            android:text="2局"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_game_rank"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingTop="4dp"
        android:paddingRight="8dp"
        android:paddingBottom="4dp"
        android:textSize="12sp"
        android:textColor="@color/text_color"
        android:text="TA的段位：青铜"/>

    <TextView
        android:id="@+id/tv_game_duration"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingTop="4dp"
        android:paddingRight="8dp"
        android:paddingBottom="4dp"
        android:textSize="12sp"
        android:visibility="gone"
        android:textColor="@color/text_color"
        android:text="陪练时长：1小时"/>

    <TextView
        android:id="@+id/tv_game_price_total"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingTop="4dp"
        android:paddingRight="8dp"
        android:paddingBottom="4dp"
        android:textSize="12sp"
        android:textColor="@color/text_color"
        android:text="总价：30元"/>

    <TextView
        android:id="@+id/tv_game_start_time"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingTop="4dp"
        android:paddingRight="8dp"
        android:paddingBottom="4dp"
        android:textSize="12sp"
        android:textColor="@color/text_color"
        android:text="开始时间：2017-06-30 15:25"/>
    <TextView
        android:id="@+id/tv_game_end_time"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingTop="4dp"
        android:paddingRight="8dp"
        android:paddingBottom="4dp"
        android:textSize="12sp"
        android:textColor="@color/text_color"
        android:text="开始时间：2017-06-30 15:25"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_game_order_number"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="4dp"
            android:paddingRight="8dp"
            android:paddingBottom="4dp"
            android:textSize="12sp"
            android:textColor="@color/text_color"
            android:text="订单号：20170630152500"/>
        <TextView
            android:id="@+id/tv_order_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="等待接单中"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:textColor="@color/ab_backdround_red"
            android:textSize="12sp"/>
    </LinearLayout>
