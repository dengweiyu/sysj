<RelativeLayout android:id="@+id/fm_float_content_layout"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/content_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <RelativeLayout
            android:id="@+id/content"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:background="@drawable/floatviewbackround"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/layout_starts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/bt_starts"
                    style="@style/FloatViewImageStyle"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/bt_start"/>

                <TextView
                    style="@style/FloatViewTextStyle"
                    android:text="录制"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_sc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/float_layout_botton_SC"
                    style="@style/FloatViewImageStyle"
                    android:src="@drawable/shears"/>

                <TextView
                    android:id="@+id/textView1"
                    style="@style/FloatViewTextStyle"
                    android:text="截图"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/bt_backHome"
                    style="@style/FloatViewImageStyle"
                    android:src="@drawable/bt_backhome"
                    android:visibility="visible"/>

                <TextView
                    style="@style/FloatViewTextStyle"
                    android:layout_marginBottom="15dp"
                    android:text="主页"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_float"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/bt_float_ico"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/opencamera"
                    android:visibility="visible"/>

                <TextView
                    android:id="@+id/bt_float_tv"
                    style="@style/FloatViewTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="打开主播"/>
            </LinearLayout>
        </RelativeLayout>
    </FrameLayout>

</RelativeLayout>