<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
    android:orientation="vertical">

    <!--70-->

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/kaka_26"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="@dimen/kaka_96">

        <ProgressBar
            android:id="@+id/audio_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:indeterminateOnly="false"
            android:mirrorForRtl="true"
            android:max="100"
            android:progress="40"
            android:progressDrawable="@drawable/videoeditor_audio"/>

        <TextView
            android:id="@+id/audio_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/kaka_12"
            android:text="@string/audio_text"
            android:textColor="#ffffff"
            android:textSize="9sp"/>

        <ImageView
            android:layout_width="@dimen/kaka_14"
            android:layout_height="@dimen/kaka_16"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/kaka_6"
            android:scaleType="fitCenter"
            android:src="@drawable/videoeditor_mic"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/kaka_6"
            android:paddingBottom="@dimen/kaka_6"
            android:orientation="vertical">

            <!--21-->

            <LinearLayout
                android:id="@+id/sound"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/kaka_15"
                android:layout_marginRight="32dp"
                android:layout_marginTop="@dimen/kaka_12"
                android:gravity="center">

                <TextView
                    android:id="@+id/audio_original"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/audio_original"
                    android:textColor="#ffffff"
                    android:textSize="14.3sp"/>

                <!--23/13-->

                <ImageView
                    android:id="@+id/audio_sound"
                    android:layout_width="@dimen/kaka_29.9"
                    android:layout_height="@dimen/kaka_16.9"
                    android:layout_marginLeft="@dimen/kaka_10"
                    android:src="@drawable/setting_chk_blue"
                    android:scaleType="fitXY"
                    android:visibility="visible"/>

            </LinearLayout>

            <!--40/62-->
            <!--42-->

            <TextView
                android:id="@+id/audio_record"
                android:layout_width="@dimen/kaka_44"
                android:layout_height="@dimen/kaka_44"
                android:layout_marginTop="@dimen/kaka_42"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:background="@drawable/videoeditor_recording"
                android:text="@string/audio_recording_start"
                android:textColor="#ffffff"
                android:textSize="10.4sp"/>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>