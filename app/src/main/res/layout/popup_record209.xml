<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="154dp"
    android:background="@color/white">

    <!--20-->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_above="@+id/rl_bottom_close">

        <LinearLayout
            android:id="@+id/record_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="fitXY"
                android:src="@drawable/gamedetail_transcribe_208"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/groupdetail_video"
                android:textColor="#525252"
                android:textSize="12sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/record_local"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="fitXY"
                android:src="@drawable/gamedetail_local_208"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/groupdetail_local"
                android:textColor="#525252"
                android:textSize="12sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/record_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="fitXY"
                android:src="@drawable/gamedetail_record_208"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/groupdetail_record"
                android:textColor="#525252"
                android:textSize="12sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/record_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="fitXY"
                android:src="@drawable/gamedetail_image_208"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/groupdetail_image"
                android:textColor="#525252"
                android:textSize="12sp"/>

        </LinearLayout>

    </LinearLayout>

    <!-- 96 + 38 = 134 -->

    <RelativeLayout
        android:id="@+id/rl_bottom_close"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/record_close"
            android:layout_width="@dimen/ab_height"
            android:layout_height="@dimen/ab_height"
            android:layout_centerInParent="true"
            android:padding="8dp"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="8dp"
            android:scaleType="fitXY"
            android:src="@drawable/home_close"/>

    </RelativeLayout>


</RelativeLayout>