<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="34dp"
    android:layout_marginRight="34dp"
    android:background="@drawable/button_main_round"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="28dp"
        android:text="设置昵称"
        android:textColor="@color/text_color"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:text="请输入昵称"
        android:textColor="#8e8e8e"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/dialog_editname_name"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginEnd="18dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/edittext_shape"
        android:cursorVisible="true"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:textColor="@color/text_color"
        android:textColorHint="#b9b9b9"
        android:textCursorDrawable="@drawable/signup_cursor"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#d9d9d9"
        android:layout_marginTop="20dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_editname_no"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:clickable="true"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/menu_help_blue"
            android:textSize="16sp" />

        <View
            android:layout_width="1px"
            android:layout_height="40dp"
            android:background="#d9d9d9"/>

        <TextView
            android:id="@+id/dialog_editname_yes"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:clickable="true"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/menu_help_blue"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>
