<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/ll_reward_rank"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/background_press"
    android:padding="10dp">
    <TextView
        android:id="@+id/tv_rank"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:text="1"

        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:textSize="12sp"/>
    <ImageView
        android:id="@+id/iv_rank"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/playerbillboard_one"
        android:visibility="gone"
        />

    <com.li.videoapplication.views.CircleImageView
        android:id="@+id/civ_player_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="centerCrop"
        android:layout_marginLeft="8dp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginLeft="20dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_user_nick_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:textSize="14sp"
            android:maxLines="1"
            android:text="霸道总裁"/>
        <LinearLayout
            android:gravity="bottom"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_reward_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="送出："
                android:textSize="10sp"/>

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/currency"
                android:layout_marginTop="1dp"/>
            <TextView
                android:id="@+id/tv_currency_coin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#828282"
                android:layout_marginLeft="2dp"
                android:hint="00000000"
                android:text="0"
                android:textSize="10sp"/>

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/slider_bean"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="16dp"/>
            <TextView
                android:id="@+id/tv_currency_beans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:hint="00000000"
                android:textColor="#828282"
                android:layout_marginLeft="2dp"
                android:textSize="10sp"/>
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:id="@+id/tv_send_reward_focus"
        android:layout_width="48dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"

        android:background="@drawable/player_focus"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/dynamic_focus"
        android:textColor="@color/groupdetail_player_red"
        android:textSize="11sp"
        android:visibility="visible"/>
</LinearLayout>