<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_main_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white">

            <include layout="@layout/toolbar_white" />

        </android.support.v7.widget.Toolbar>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/rv_coach_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">
        <com.li.videoapplication.views.ViewFlow
            android:id="@+id/viewflow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

        <com.li.videoapplication.views.CircleFlowIndicator
            android:id="@+id/circleflowindicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="8dp"
            android:alpha="0.6"
            app:activeColor="#ffffff"
            app:activeType="fill"
            app:circleSeparation="10dp"
            app:inactiveColor="#9fb7c8"
            app:inactiveType="fill"
            app:radius="3dp" />
    </RelativeLayout>


    <android.support.v7.widget.CardView
        android:id="@+id/cv_coach_detail_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        app:cardElevation="1dp"

        app:cardBackgroundColor="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <include
            layout="@layout/layout_coach_info_detail_header"></include>

        <View
            android:id="@+id/v_divider_description"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/lightgrey"></View>

            <TextView
                android:id="@+id/tv_coach_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_marginBottom="15dp"
                android:visibility="gone"
                android:textSize="12sp"
                android:textColor="@color/textcolor_french_gray"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/cv_coach_detail_game"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        app:cardElevation="1dp"

        app:cardBackgroundColor="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/text_color"
                    android:paddingLeft="20dp"
                    android:paddingBottom="25dp"
                    android:paddingTop="25dp"
                    android:text="订单数"/>
                <TextView
                    android:id="@+id/tv_coach_detail_order"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:textColor="@color/text_color"
                    android:paddingRight="20dp"
                    android:paddingBottom="25dp"
                    android:paddingTop="25dp"
                    android:gravity="right"
                    android:text="95"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@color/lightgrey"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:textColor="@color/text_color"
                    android:paddingLeft="20dp"
                    android:paddingBottom="25dp"
                    android:paddingTop="25dp"
                    android:text="段位"/>
                <ImageView
                    android:id="@+id/iv_coach_rank_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_margin="4dp"
                    android:layout_gravity="center"/>
                <TextView
                    android:id="@+id/tv_coach_rank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/text_color"
                    android:paddingRight="20dp"
                    android:paddingBottom="25dp"
                    android:paddingTop="25dp"
                    android:gravity="right"
                    android:text="永恒钻石"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:visibility="gone"
                android:background="@color/lightgrey"></View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:textColor="@color/text_color"
                    android:paddingLeft="20dp"
                    android:paddingBottom="25dp"
                    android:paddingTop="25dp"
                    android:text="战绩"/>
                <TextView
                    android:id="@+id/tv_coach_detail_win_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/ab_backdround_red"
                    android:layout_marginRight="10dp"
                    android:paddingBottom="25dp"
                    android:paddingTop="25dp"
                    android:gravity="center"
                    android:text="80胜"/>
                <TextView
                    android:id="@+id/tv_coach_detail_lose_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/lpds_blue"
                    android:paddingRight="20dp"
                    android:paddingBottom="25dp"
                    android:paddingTop="25dp"
                    android:gravity="center"
                    android:text="12负"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:visibility="gone"
                android:background="@color/lightgrey"></View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/text_color"
                    android:paddingLeft="20dp"
                    android:paddingBottom="25dp"
                    android:paddingTop="25dp"
                    android:text="胜率"/>
                <TextView
                    android:id="@+id/tv_coach_detail_rate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:textColor="@color/text_color"
                    android:paddingRight="20dp"
                    android:paddingBottom="25dp"
                    android:paddingTop="25dp"
                    android:gravity="right"
                    android:text="90%"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:visibility="gone"
                android:background="@color/lightgrey"></View>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cv_coach_detail_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:visibility="gone"
        app:cardElevation="1dp"
        app:cardBackgroundColor="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="14sp"
                android:textColor="@color/text_color"
                android:paddingLeft="20dp"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:text="玩家评价"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@color/lightgrey"></View>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_coach_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"

                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_coach_all_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textSize="12sp"
                    android:textColor="@color/ab_backdround_red"
                    android:text="全部评价"/>
                <ImageView
                    android:layout_width="11dp"
                    android:layout_height="11dp"
                    android:layout_marginLeft="1dp"
                    android:layout_gravity="center"
                    android:src="@drawable/arrow_right_red"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/tv_tip_playing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center"
        android:textSize="12sp"
        android:text="该陪练正在游戏中，可继续选择TA"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="64dp"></View>
</LinearLayout>
</ScrollView>
    </LinearLayout>

    <include
        layout="@layout/layout_coach_operation"></include>
</RelativeLayout>