<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <!-- 72/72 -->

    <com.li.videoapplication.views.RoundedImageView
        android:id="@+id/hotgame_pic"
        android:layout_width="49dp"
        android:layout_height="49dp"
        android:layout_centerHorizontal="true"
        android:src="#555555"
        app:riv_border_color="#ffffff"
        app:riv_border_width="0dp"
        app:riv_corner_radius="5dp"
        app:riv_oval="false" />

    <TextView
        android:id="@+id/hotgame_name"
        android:layout_width="56dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hotgame_pic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:text=""
        android:textColor="#242424"
        android:textSize="10dp"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/hotgame_status"
        android:layout_width="26dp"
        android:layout_height="14dp"
        android:layout_alignBottom="@+id/hotgame_pic"
        android:layout_alignRight="@+id/hotgame_pic"
        android:layout_marginBottom="6dp"
        android:layout_marginRight="-4dp"
        android:src="#999999"
        android:visibility="gone" />
</RelativeLayout>

