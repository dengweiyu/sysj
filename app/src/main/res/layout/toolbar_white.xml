<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/rl_toolbar"
    android:layout_width="match_parent"
    android:layout_height="38dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/tb_back"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:src="@drawable/ab_goback_gray"
        android:background="@drawable/background_press"
        android:padding="12dp"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/tb_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="16sp"
        android:textColor="@color/text_color"
        android:text="标题"
        android:paddingStart="38dp"
        android:paddingEnd="38dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_centerInParent="true"
        android:gravity="center"/>

    <TextView
        android:id="@+id/tb_topup_record"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:text="充值记录"
        android:textColor="@color/currency_modou_gold"
        android:textSize="14sp"
        android:gravity="center"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:background="?android:attr/selectableItemBackground"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tb_save"
        android:layout_width="44dp"
        android:layout_height="22dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/mywallet_currencyrecord_red"
        android:gravity="center"
        android:text="@string/mypersonalinfo_save"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_save_edit"
        android:layout_width="44dp"
        android:layout_height="22dp"
        android:layout_marginEnd="12dp"
        android:clickable="true"
        android:background="@drawable/button_edit"
        android:gravity="center"
        android:text="@string/mypersonalinfo_edit"
        android:textColor="@color/menu_main_red"
        android:textSize="12sp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_tb_record"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:src="@drawable/ab_vedio_red_205"/>

    <ImageView
        android:id="@+id/tb_close"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:src="@drawable/home_close"
        android:padding="12dp"
        android:visibility="gone"
        android:layout_alignParentRight="true"/>
</RelativeLayout>