    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="19dp"
        android:background="#e2e2e2"/>

    <RelativeLayout
        android:id="@+id/mypersonnalinfo_introduce_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:paddingBottom="9dp"
        android:paddingLeft="19dp"
        android:paddingRight="19dp"
        android:paddingTop="9dp">

        <TextView
            android:id="@+id/left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/mypersonalinfo_introduce"
            android:textColor="#6d6d6d"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/mypersonnalinfo_introduce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/left"
            android:gravity="right"
            android:hint="@string/dynamic_introduce_hint"
            android:text=""
            android:ellipsize="end"
            android:maxEms="30"
            android:textColor="#6d6d6d"
            android:textColorHint="#886d6d6d"
            android:textSize="12sp"
            android:maxLines="2"/>

        <EditText
            android:id="@+id/mypersonnalinfo_introduce_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/left"
            android:background="@null"
            android:cursorVisible="true"
            android:gravity="right"
            android:hint="@string/mypersonalinfo_introduce_hint"
            android:text=""
            android:textColor="#6d6d6d"
            android:maxEms="30"
            android:ellipsize="end"
            android:textColorHint="#886d6d6d"
            android:textCursorDrawable="@null"
            android:textSize="12sp"
            android:maxLines="2"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e2e2e2"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="19dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/mypersonalinfo_private"
            android:textColor="#6d6d6d"
            android:textSize="12sp"
            android:id="@+id/textView" />

        <CheckBox
            android:id="@+id/mypersonnalinfo_public"
            android:layout_width="32dp"
            android:layout_height="18dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="19dp"
            android:background="@drawable/setting_btn"
            android:button="@null"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="13dp"
            android:layout_toLeftOf="@+id/mypersonnalinfo_public"
            android:gravity="right"
            android:text="@string/mypersonalinfo_public"
            android:textColor="#6d6d6d"
            android:textSize="9sp"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e2e2e2"/>

    <RelativeLayout
        android:id="@+id/mypersonnalinfo_qq_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:paddingBottom="9dp"
        android:paddingLeft="19dp"
        android:paddingRight="19dp"
        android:paddingTop="9dp">

        <TextView
            android:id="@+id/left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/mypersonalinfo_qq"
            android:textColor="#6d6d6d"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/mypersonnalinfo_qq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/left"
            android:gravity="right"
            android:text=""
            android:textColor="#6d6d6d"
            android:textSize="12sp"/>

        <EditText
            android:id="@+id/mypersonnalinfo_qq_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/left"
            android:background="@null"
            android:cursorVisible="true"
            android:gravity="right"
            android:hint="@string/mypersonalinfo_qq_hint"
            android:text=""
            android:textColor="#6d6d6d"
            android:textColorHint="#886d6d6d"
            android:textCursorDrawable="@null"
            android:textSize="12sp"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="19dp"
        android:background="#e2e2e2"/>

    <RelativeLayout
        android:id="@+id/mypersonnalinfo_mobile_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_white"
        android:orientation="horizontal"
        android:paddingBottom="9dp"
        android:paddingLeft="19dp"
        android:paddingRight="19dp"
        android:paddingTop="9dp">

        <TextView
            android:id="@+id/left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/mypersonalinfo_mobile"
            android:textColor="#6d6d6d"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/mypersonnalinfo_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/left"
            android:gravity="right"
            android:text=""
            android:textColor="#6d6d6d"
            android:textSize="12sp"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="19dp"
        android:background="#e2e2e2"/>

    <RelativeLayout
        android:id="@+id/mypersonnalinfo_like_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:paddingBottom="9dp"
        android:paddingLeft="19dp"
        android:paddingRight="19dp"
        android:paddingTop="16dp">

        <TextView
            android:id="@+id/left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/mypersonalinfo_like"
            android:textColor="#6d6d6d"
            android:textSize="12sp"/>

        <com.li.videoapplication.views.HorizontalListView
            android:id="@+id/horizontallistvierw"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_below="@+id/left"
            android:layout_marginTop="7dp"
            android:background="#00e2e2e2"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e2e2e2"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e2e2e2"/>

    <RelativeLayout
        android:id="@+id/mypersonnalinfo_logout_btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/button_main"
        android:orientation="horizontal"
        android:paddingBottom="9dp"
        android:paddingLeft="19dp"
        android:paddingRight="19dp"
        android:paddingTop="9dp">

        <TextView
            android:id="@+id/left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/mypersonalinfo_logout"
            android:textColor="#6d6d6d"
            android:textSize="12sp"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e2e2e2"/>

</LinearLayout>