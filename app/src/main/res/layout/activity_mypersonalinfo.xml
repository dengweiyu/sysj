<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="#f7f7f7"
              android:clipToPadding="true"
              android:fitsSystemWindows="true"
              android:orientation="vertical"
              tools:ignore="DuplicateIds,UnusedAttribute,HardcodedText,RtlHardcoded,SmallSp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="19dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/mypersonalinfo_base"
            android:textColor="#6d6d6d"
            android:textSize="12sp"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e2e2e2"/>

    <RelativeLayout
        android:id="@+id/mypersonnalinfo_head_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:paddingBottom="9dp"
        android:paddingLeft="19dp"
        android:paddingRight="19dp"
        android:paddingTop="9dp">

        <TextView
            android:id="@+id/left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/mypersonnalinfo_head"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/mypersonalinfo_head"
            android:textColor="#6d6d6d"
            android:textSize="12sp"/>

        <com.li.videoapplication.views.CircleImageView
            android:id="@+id/mypersonnalinfo_head"
            android:layout_width="41dp"
            android:layout_height="41dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="19dp"
        android:background="#e2e2e2"/>

    <RelativeLayout
        android:id="@+id/mypersonnalinfo_name_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_white"
        android:orientation="horizontal"
        android:paddingBottom="9dp"
        android:paddingLeft="19dp"
        android:paddingRight="19dp"
        android:paddingTop="9dp">

        <TextView
            android:id="@+id/left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/mypersonalinfo_name"
            android:textColor="#6d6d6d"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/mypersonnalinfo_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/left"
            android:gravity="right"
            android:text=""
            android:textColor="#6d6d6d"
            android:textSize="12sp"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="19dp"
        android:background="#e2e2e2"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:paddingBottom="9dp"
        android:paddingLeft="19dp"
        android:paddingRight="19dp"
        android:paddingTop="9dp">

        <TextView
            android:id="@+id/left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/mypersonalinfo_gender"
            android:textColor="#6d6d6d"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/mypersonnalinfo_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/left"
            android:gravity="right"
            android:text=""
            android:textColor="#6d6d6d"
            android:textSize="12sp"/>

        <RadioGroup
            android:id="@+id/mypersonnalinfo_gender_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:gravity="center_vertical|right"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:gravity="right"
                android:text="@string/mypersonalinfo_female"
                android:textColor="#6d6d6d"
                android:textSize="12sp"/>

            <RadioButton
                android:id="@+id/mypersonnalinfo_female"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:layout_toLeftOf="@+id/female"
                android:background="@drawable/mypersonalinfo_btn"
                android:button="@null"/>

            <TextView
                android:id="@+id/male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:gravity="right"
                android:text="@string/mypersonalinfo_male"
                android:textColor="#6d6d6d"
                android:textSize="12sp"/>

            <RadioButton
                android:id="@+id/mypersonnalinfo_male"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginRight="9dp"
                android:background="@drawable/mypersonalinfo_btn"
                android:button="@null"
                android:checked="true"/>
        </RadioGroup>
    </RelativeLayout>

