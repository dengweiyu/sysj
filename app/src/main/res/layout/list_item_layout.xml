<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/layout_title_height"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/layout_title_height"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="@dimen/activity_title_width_40dp"
            android:layout_height="@dimen/activity_title_width_40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/activity_vertical_margin_20dp"
            android:src="@drawable/list_device_icon" />

        <TextView
            android:id="@+id/item_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@android:color/black"
            android:layout_marginLeft="@dimen/layout_title_height_83dp"
            android:textSize="@dimen/activity_title_size_14sp" />

        <ImageView
            android:id="@+id/item_imageview"
            android:layout_width="@dimen/activity_vertical_margin"
            android:layout_height="@dimen/activity_vertical_margin"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/activity_title_width"
            android:src="@drawable/device_connect_selector" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_horizontal_margin_0.5dp"
        android:layout_marginLeft="@dimen/layout_title_height_83dp"
        android:background="@color/divider_bg" />

</LinearLayout>