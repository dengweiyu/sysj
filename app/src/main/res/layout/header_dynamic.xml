<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dynamic_touch"
    android:layout_width="fill_parent"
    android:background="@color/white"
    android:layout_height="170dp">

    <!-- 168 -->

    <!--游客-->
    <RelativeLayout
        android:id="@+id/dynamic_tourist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:visibility="gone">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"
            android:src="@drawable/dynamic_bg" />

        <!--24 + 38 = 62-->
        <ImageView
            android:id="@+id/dynamic_loginIcon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="62dp"
            android:scaleType="centerCrop"
            android:src="@drawable/dynamic_unlogin" />

        <TextView
            android:id="@+id/dynamic_loginText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dynamic_loginIcon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="9dp"
            android:text="@string/mydynamic_login"
            android:textColor="#ffffff"
            android:textSize="15sp" />

    </RelativeLayout>

    <!--登录用户-->
    <RelativeLayout

        android:id="@+id/dynamic_user"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <!-- 148dp -->
        <ImageView
            android:id="@+id/dynamic_textBg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"
            android:src="@drawable/dynamic_bg" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:src="#20000000" />

      <!--  <View
            android:id="@+id/dynamic_personalcenter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/dynamic_head_layout"
            android:layout_alignLeft="@+id/dynamic_head_layout"
            android:layout_alignRight="@+id/dynamic_introduce"
            android:layout_alignTop="@+id/dynamic_head_layout"
            android:layout_marginBottom="-4dp"
            android:layout_marginLeft="-12dp"
            android:layout_marginTop="-4dp" />

        <View
            android:id="@+id/dynamic_mypersonalcenter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/dynamic_head_layout"
            android:layout_alignLeft="@+id/dynamic_head_layout"
            android:layout_alignTop="@+id/dynamic_head_layout"
            android:layout_marginBottom="-4dp"
            android:layout_marginLeft="-12dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="-4dp" />-->

        <RelativeLayout
            android:id="@+id/dynamic_head_layout"
            android:layout_width="61dp"
            android:layout_height="61dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="54dp">

            <!-- 16  top=36 -->
            <com.li.videoapplication.views.CircleImageView
                android:id="@+id/dynamic_head"
                android:layout_width="61dp"
                android:layout_height="61dp"
                android:scaleType="centerCrop"
                android:src="#666666"
                app:border_color="#ffffff"
                app:border_width="1px" />

            <ImageView
                android:id="@+id/dynamic_v"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/home_v_red"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/iv_dynamic_vip"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/vip_level_1_icon"
                android:visibility="invisible" />
        </RelativeLayout>


        <TextView
            android:id="@+id/dynamic_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/dynamic_head_layout"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/dynamic_head_layout"
            android:ellipsize="end"
            android:maxWidth="140dp"
            android:singleLine="true"
            android:text="格式化"
            android:textColor="#ffffff"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/dynamic_attention"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dynamic_name"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@+id/dynamic_head_layout"
            android:background="@drawable/personalheader_fans_bg"
            android:paddingRight="6dp"
            android:text="关注：0"
            android:textColor="#aaffffff"
            android:textSize="10sp" />

        <View
            android:id="@+id/divider"
            android:layout_width="1px"
            android:layout_height="11dp"
            android:layout_alignBottom="@+id/dynamic_attention"
            android:layout_toRightOf="@+id/dynamic_attention"
            android:background="#bbbcbd" />

        <TextView
            android:id="@+id/dynamic_fans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dynamic_name"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@+id/divider"
            android:background="@drawable/personalheader_fans_bg"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:text="粉丝：0"
            android:textColor="#aaffffff"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/dynamic_introduce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dynamic_fans"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="6dp"
            android:layout_toLeftOf="@+id/dynamic_go"
            android:layout_toRightOf="@+id/dynamic_head_layout"
            android:ellipsize="end"
            android:hint="@string/dynamic_introduce_hint"
            android:maxLines="1"
            android:text=""
            android:visibility="gone"
            android:textColor="#aaffffff"
            android:textColorHint="#aaffffff"
            android:textSize="10sp" />

        <LinearLayout
            android:id="@+id/ll_receive_gift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dynamic_introduce"
            android:layout_toRightOf="@+id/dynamic_head_layout"
            android:layout_marginLeft="12dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_receive_gift"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#aaffffff"
                android:textSize="10sp"
                android:clickable="true"
                android:focusable="true"
                android:layout_gravity="center_vertical"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text="收到的礼物：暂无"/>
            <ImageView
                android:id="@+id/iv_first_gift"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:scaleType="fitXY"
                android:layout_gravity="center_vertical"/>
            <ImageView
                android:id="@+id/iv_second_gift"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:scaleType="fitXY"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/dynamic_focus_layout"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@+id/ll_receive_gift"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/dynamic_head_layout"
            android:background="@drawable/gamematch_cs_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="6dp"
            android:paddingRight="6dp">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginRight="4dp"
                android:src="@drawable/dynamic_focus_left" />

            <TextView
                android:id="@+id/dynamic_focus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dynamic_focus"
                android:textColor="@color/white"
                android:textSize="10sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/dynamic_text"
            android:layout_width="76dp"
            android:layout_height="14dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="15dp"
            android:scaleType="fitXY"
            android:src="@drawable/dynamic_text"
            android:visibility="invisible" />

        <!-- 17 20/32-->
        <ImageView
            android:id="@+id/dynamic_go"
            android:layout_width="38dp"
            android:layout_height="71dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="2dp"
            android:paddingBottom="50dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="50dp"
            android:scaleType="centerCrop"
            android:src="@drawable/go_dynamic" />


        <ImageView
            android:id="@+id/dynamic_textBtn"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_alignBottom="@+id/dynamic_text"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="-10dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp" />
    </RelativeLayout>

</RelativeLayout>