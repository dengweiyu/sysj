<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/button_white_bg">

    <RelativeLayout
        android:id="@+id/videoplay_comment_head_layout"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="10dp">

        <com.li.videoapplication.views.CircleImageView
            android:id="@+id/videoplay_comment_head"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:clickable="true"
            android:src="#555555" />

        <ImageView
            android:id="@+id/videoplay_comment_v"
            android:layout_width="9dp"
            android:layout_height="9dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/home_v_red"
            android:visibility="invisible" />
    </RelativeLayout>

    <TextView
        android:id="@+id/videoplay_comment_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/videoplay_comment_head_layout"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="1dp"
        android:layout_toRightOf="@+id/videoplay_comment_head_layout"
        android:ellipsize="end"
        android:singleLine="true"
        android:text=""
        android:textColor="#454545"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/videoplay_comment_identity"
        android:layout_width="20dp"
        android:layout_height="10dp"
        android:layout_alignBottom="@+id/videoplay_comment_name"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="7dp"
        android:layout_toRightOf="@+id/videoplay_comment_name"
        android:background="@drawable/level_slider_bg"
        android:gravity="center"
        android:text="楼主"
        android:textColor="#ffffff"
        android:textSize="7sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/videoplay_comment_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/videoplay_comment_name"
        android:layout_below="@+id/videoplay_comment_name"
        android:layout_marginRight="20dp"
        android:layout_marginTop="6dp"
        android:text=""
        android:hint="正在玩命加载中..."
        android:textColor="#8b8b8b"
        android:textSize="10sp" />

    <RelativeLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_alignLeft="@+id/videoplay_comment_name"
        android:layout_below="@+id/videoplay_comment_content"
        android:layout_marginRight="20dp">

        <TextView
            android:id="@+id/videoplay_comment_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:text="10分钟前"
            android:textColor="#dd565656"
            android:textSize="9sp" />

        <!--13-->

        <ImageView
            android:id="@+id/videoplay_comment_good"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@+id/videoplay_comment_goodCount"
            android:paddingBottom="6dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="5dp"
            android:src="@drawable/videoplay_good_red_205" />

        <TextView
            android:id="@+id/videoplay_comment_goodCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/videoplay_comment_comment"
            android:singleLine="true"
            android:text=""
            android:hint="0"
            android:textColor="#dd565656"
            android:textSize="9sp" />

        <ImageView
            android:id="@+id/videoplay_comment_comment"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="6dp"
            android:src="@drawable/videoplay_comment_gray_205" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/bottom"
        android:layout_marginLeft="18dp"
        android:background="#e2e2e2" />

</RelativeLayout>