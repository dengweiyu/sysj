<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:background="@color/activity_main_bg">

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/activity_main_bg"></View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <LinearLayout
            android:id="@+id/ll_take_order_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="6dp"
            android:visibility="gone"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_sign_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/text_color"
                android:text="亲爱的陪练宝宝，有事离开记得签退哦~"
              />

            <TextView
                android:id="@+id/tv_user_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginLeft="10dp"
                android:textSize="12sp"
                android:layout_toRightOf="@+id/tv_sign_tip"
                android:text="签到"
                android:background="@color/ab_backdround_red"/>
        </LinearLayout>
        <View
            android:id="@+id/v_divider_top"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/lightgrey"
            android:layout_below="@+id/ll_take_order_top"></View>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/srl_take_order"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_play_with_take_order"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
    </android.support.v4.widget.SwipeRefreshLayout>

        <include
            layout="@layout/layout_order_list_empty"></include>
    </RelativeLayout>
</LinearLayout>