<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 阴影底层 -->
  <!--top代表 margin top-->
    <item
        android:left="3dp"
        android:top="3dp"
        android:right="0dp"
        android:bottom="0dp">
        <shape android:shape="rectangle" >

            <gradient
                android:angle="-45"
                android:startColor="#08000000"
                android:endColor="#08000000" />
        </shape>
    </item>

    <!-- 白色背景部分 -->
    <item
        android:left="0.6dp"
        android:top="0.6dp"
        android:right="1.5dp"
        android:bottom="1.5dp">
        <shape android:shape="rectangle" >

            <gradient
                android:angle="-45"
                android:endColor="#FFFFFF"
                android:startColor="#FFFFFF" />
        </shape>
    </item>
</layer-list>