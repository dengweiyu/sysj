<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid android:color="#f4f4f4"/>
            <!-- 描边 -->
            <stroke
                android:width="1dp"
                android:color="#48c5ff" />
            <!-- 圆角 -->
            <corners
                android:radius="1dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#ffffff"/>
            <stroke
                android:width="1dp"
                android:color="#48c5ff" />
            <corners
                android:radius="1dp"/>
        </shape>
    </item>
</selector>